@model IEnumerable<FoodSathi.Models.Feedback>

@{
    ViewData["Title"] = "Manage Feedback";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">⭐ Manage Customer Reviews</h2>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">🏠 Back</a>
        </div>

        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>#</th>
                    <th>User</th>
                    <th>Product</th>
                    <th>Rating</th>
                    <th>Review</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int i = 1;
                    foreach (var f in Model)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td>@f.UserName</td>
                            <td>@f.ProductName</td>
                            <td class="text-center">
                                @for (int star = 1; star <= 5; star++)
                                {
                                    if (star <= f.Rating)
                                    {
                                        <span class="text-warning">★</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">★</span>
                                    }
                                }
                            </td>
                            <td>@(f.Review.Length > 50 ? f.Review.Substring(0, 50) + "..." : f.Review)</td>
                            <td>@f.Date.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@f.Id" class="btn btn-sm btn-info rounded-pill px-3">🔍 View</a>

                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@f.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3"
                                            onclick="return confirm('Are you sure you want to delete this review?');">
                                        🗑️ Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">No feedback available yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
