@model IEnumerable<FoodSathi.Models.Feedback>

@{
    ViewData["Title"] = "Customer Feedback";
}

<div class="container py-5 fade-in">

    <!-- 🌟 Premium Header -->
    <div class="text-center mb-5 position-relative">
        <div class="logo-circle mx-auto d-flex align-items-center justify-content-center shadow-glow mb-3">
            <i class="bi bi-basket2-heart-fill fs-1 text-light"></i>
        </div>
        <h1 class="fw-bold brand-name text-gradient mb-2">FoodSathi</h1>
        <h4 class="fw-semibold text-success">We Value Your Feedback 💚</h4>
        <p class="text-muted mt-2 fs-6">
            Your insights help us make <span class="fw-semibold text-success">FoodSathi</span> even better 🌿
        </p>
    </div>

    <!-- 💬 Feedback Form -->
    <div class="card border-0 glass-card shadow-xl rounded-5 p-5 mb-5 mx-auto" style="max-width:720px;">
        <form id="feedbackForm">
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Your Name / Email</label>
                    <input type="text" name="UserName" class="form-control form-control-lg rounded-4 shadow-sm" placeholder="John Doe / example@mail.com" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Product Name</label>
                    <input type="text" name="ProductName" class="form-control form-control-lg rounded-4 shadow-sm" placeholder="E.g., Paneer Momo" required />
                </div>
            </div>

            <div class="my-4 text-center">
                <label class="form-label fw-semibold d-block mb-2">Your Rating</label>
                <div id="starRating" class="fs-1 text-warning d-flex justify-content-center gap-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="bi bi-star" data-value="@i"></i>
                    }
                </div>
                <input type="hidden" name="Rating" id="ratingValue" />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Your Review</label>
                <textarea name="Review" class="form-control rounded-4 shadow-sm" rows="4" placeholder="Share your experience..." required></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-gradient btn-lg px-5 py-2 rounded-pill shadow-hover">
                    <i class="bi bi-send-fill me-2"></i>Submit Feedback
                </button>
            </div>
        </form>
    </div>

    <!-- ⭐ Average Rating -->
    @if (Model.Any())
    {
        <div class="text-center mb-5 fade-in">
            <div class="card glass-card border-0 rounded-5 shadow-lg p-4 mx-auto" style="max-width:420px;">
                <h5 class="fw-bold text-success mb-3">⭐ Average Rating</h5>
                <div class="fs-3 text-warning mb-2">
                    @for (int i = 0; i < Math.Round(ViewBag.AvgRating); i++)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                </div>
                <h3 class="fw-bold mb-1 text-dark">@ViewBag.AvgRating.ToString("0.0") / 5</h3>
                <p class="text-muted mb-0 small">Based on @Model.Count() verified reviews</p>
            </div>
        </div>
    }

    <!-- 🗣️ Feedback List -->
    <h4 class="fw-bold text-success text-center mb-4">Recent Feedback 💬</h4>
    <div class="row g-4 justify-content-center">
        @foreach (var f in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card border-0 glass-card rounded-4 p-4 h-100 hover-card shadow-hover">
                    <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap">
                        <h5 class="text-success fw-semibold mb-0 text-truncate">@f.ProductName</h5>
                        <small class="text-muted">@f.Date.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div class="text-warning mb-2 fs-5">
                        @for (int i = 0; i < f.Rating; i++)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                    </div>
                    <p class="text-muted mb-3">"@f.Review"</p>
                    <small class="text-secondary">– @f.UserName</small>
                </div>
            </div>
        }
    </div>
</div>

<!-- ✅ Thank You Modal -->
<div class="modal fade" id="thankYouModal" tabindex="-1" aria-labelledby="thankYouLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center border-0 rounded-5 shadow-lg glass-card">
            <div class="modal-body p-5">
                <div class="text-success mb-3">
                    <i class="bi bi-check-circle-fill fs-1"></i>
                </div>
                <h4 class="fw-bold text-success mb-2">Thank You!</h4>
                <p class="text-muted">Your feedback has been successfully submitted 💚</p>
                <button type="button" class="btn btn-gradient rounded-pill px-4 py-2 shadow-hover" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let rating = 0;
        const stars = document.querySelectorAll('#starRating i');

        stars.forEach(star => {
            star.addEventListener('mouseover', () => {
                stars.forEach((s, i) => s.classList.toggle('bi-star-fill', i < star.dataset.value));
            });
            star.addEventListener('mouseout', () => {
                stars.forEach((s, i) => s.classList.toggle('bi-star-fill', i < rating));
            });
            star.addEventListener('click', () => {
                rating = parseInt(star.dataset.value);
                document.getElementById("ratingValue").value = rating;
                stars.forEach((s, i) => s.classList.toggle('bi-star-fill', i < rating));
            });
        });

        // AJAX Submit
        document.getElementById("feedbackForm").addEventListener("submit", function (e) {
            e.preventDefault();
            const formData = new FormData(this);

            fetch('/Feedback/SubmitFeedback', {
                method: 'POST',
                body: formData
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        const modal = new bootstrap.Modal(document.getElementById('thankYouModal'));
                        modal.show();
                        this.reset();
                        rating = 0;
                        stars.forEach(s => s.classList.replace('bi-star-fill', 'bi-star'));
                        setTimeout(() => location.reload(), 2500);
                    } else {
                        alert('❌ Failed to submit feedback!');
                    }
                });
        });
    </script>

    <style>
        /* 🌈 Premium Look */
        body {
            background: linear-gradient(135deg, #f9fafc, #eef4f8);
            font-family: "Poppins", sans-serif;
        }

        /* 🌟 Animated Logo */
        .logo-circle {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #198754, #0dcaf0);
            border-radius: 50%;
            position: relative;
            animation: floatLogo 3s ease-in-out infinite;
            overflow: hidden;
        }

            .logo-circle::before {
                content: "";
                position: absolute;
                inset: -2px;
                border-radius: 50%;
                background: conic-gradient(from 0deg, #0dcaf0, #198754, #6610f2, #0dcaf0);
                z-index: 0;
                animation: rotateGlow 4s linear infinite;
                opacity: 0.8;
            }

            .logo-circle i {
                position: relative;
                z-index: 1;
                animation: pulse 2s infinite ease-in-out;
            }

        @@keyframes floatLogo {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-8px);
        }

        }

        @@keyframes rotateGlow {
            to

        {
            transform: rotate(360deg);
        }

        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.15);
            opacity: 0.9;
        }

        }

        .brand-name {
            font-size: 2.5rem;
            letter-spacing: 1px;
        }

        .text-gradient {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #198754, #0dcaf0);
            color: #fff;
            border: none;
            transition: all 0.3s ease-in-out;
        }

            .btn-gradient:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.25);
        }

        .hover-card {
            transition: all 0.3s ease-in-out;
        }

            .hover-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            }

        .shadow-hover {
            transition: all 0.3s ease-in-out;
        }

            .shadow-hover:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            }

        .shadow-glow {
            box-shadow: 0 0 20px rgba(25, 135, 84, 0.5);
        }

        #starRating i {
            cursor: pointer;
            transition: transform 0.25s ease, color 0.25s ease;
        }

            #starRating i:hover {
                transform: scale(1.2);
            }

        .fade-in {
            animation: fadeInUp 0.8s ease both;
        }

        @@keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 576px) {
            .brand-name {
                font-size: 2rem;
            }

            .logo-circle {
                width: 90px;
                height: 90px;
            }

            #starRating i {
                font-size: 1.6rem;
            }
        }
    </style>
}
