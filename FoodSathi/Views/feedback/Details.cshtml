@model FoodSathi.Models.Feedback

@{
    ViewData["Title"] = "Feedback Details";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
        <h2 class="fw-bold text-primary mb-4">📋 Feedback Details</h2>

        <dl class="row">
            <dt class="col-sm-3">User Name:</dt>
            <dd class="col-sm-9">@Model.UserName</dd>

            <dt class="col-sm-3">Product Name:</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Rating:</dt>
            <dd class="col-sm-9">
                @for (int star = 1; star <= 5; star++)
                {
                    if (star <= Model.Rating)
                    {
                        <span class="text-warning fs-5">★</span>
                    }
                    else
                    {
                        <span class="text-muted fs-5">★</span>
                    }
                }
            </dd>

            <dt class="col-sm-3">Review:</dt>
            <dd class="col-sm-9">@Model.Review</dd>

            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy hh:mm tt")</dd>
        </dl>

        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 mt-4">⬅️ Back</a>
    </div>
</div>
