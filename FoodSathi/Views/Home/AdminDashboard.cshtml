@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient">🍴 FoodSathi Admin Dashboard</h1>
        <p class="text-muted fs-5">Welcome back, <strong>Admin</strong> — manage your platform efficiently!</p>
    </div>

    <div class="row g-4">
        <!-- Manage Users -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card border-0 shadow-lg rounded-4 p-4 text-center h-100">
                <div class="card-icon mb-3">
                    <i class="bi bi-people-fill text-success fs-1"></i>
                </div>
                <h4 class="fw-semibold text-dark">Manage Users</h4>
                <p class="text-secondary">View, edit, or remove registered users from the system.</p>
                <a href="/Users/Index" class="btn btn-success px-4 mt-2">Go</a>
            </div>
        </div>

        <!-- Manage Orders -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card border-0 shadow-lg rounded-4 p-4 text-center h-100">
                <div class="card-icon mb-3">
                    <i class="bi bi-receipt-cutoff text-primary fs-1"></i>
                </div>
                <h4 class="fw-semibold text-dark">Manage Orders</h4>
                <p class="text-secondary">Track and update customer orders and delivery status.</p>
                <a href="/Orders/Index" class="btn btn-primary px-4 mt-2">Go</a>
            </div>
        </div>

        <!-- Manage Products -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card border-0 shadow-lg rounded-4 p-4 text-center h-100">
                <div class="card-icon mb-3">
                    <i class="bi bi-box-seam text-warning fs-1"></i>
                </div>
                <h4 class="fw-semibold text-dark">Manage Products</h4>
                <p class="text-secondary">Add, update, or remove food items and their prices.</p>
                <a href="/Products/Index" class="btn btn-warning px-4 mt-2 text-white">Go</a>
            </div>
        </div>

        <!-- Manage Reviews -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card border-0 shadow-lg rounded-4 p-4 text-center h-100">
                <div class="card-icon mb-3">
                    <i class="bi bi-chat-square-text-fill text-danger fs-1"></i>
                </div>
                <h4 class="fw-semibold text-dark">Manage Reviews</h4>
                <p class="text-secondary">Monitor user feedback and take necessary actions.</p>
                <a href="/Reviews/Index" class="btn btn-danger px-4 mt-2">Go</a>
            </div>
        </div>

        <!-- Analytics -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card border-0 shadow-lg rounded-4 p-4 text-center h-100">
                <div class="card-icon mb-3">
                    <i class="bi bi-graph-up-arrow text-info fs-1"></i>
                </div>
                <h4 class="fw-semibold text-dark">Analytics</h4>
                <p class="text-secondary">View detailed insights and performance metrics.</p>
                <a href="/Analytics/Index" class="btn btn-info px-4 mt-2 text-white">Go</a>
            </div>
        </div>

        <!-- Settings -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card border-0 shadow-lg rounded-4 p-4 text-center h-100">
                <div class="card-icon mb-3">
                    <i class="bi bi-gear-fill text-secondary fs-1"></i>
                </div>
                <h4 class="fw-semibold text-dark">Settings</h4>
                <p class="text-secondary">Update system preferences and admin configurations.</p>
                <a href="/Settings/Index" class="btn btn-secondary px-4 mt-2">Go</a>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .text-gradient {
        background: linear-gradient(90deg, #ff7b00, #ffb100);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .dashboard-card {
        transition: all 0.3s ease;
        background: #ffffff;
    }

    .dashboard-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-icon i {
        transition: transform 0.3s ease;
    }

    .dashboard-card:hover .card-icon i {
        transform: scale(1.1);
    }

    body {
        background: #f7f9fc;
    }
</style>
