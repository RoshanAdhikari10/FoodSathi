@model IEnumerable<FoodSathi.Models.Offer>

@{
    ViewData["Title"] = "Special Offers";
}

<h2 class="mb-5 text-center fw-bold text-primary">🎉 Special Offers</h2>
<hr class="mb-5">

<div class="d-flex justify-content-end mb-4">
    <a asp-controller="Offers" asp-action="Create" class="btn btn-success shadow-sm">
        ➕ Add New Offer
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center fs-5 py-4">
        No active offers at the moment. Please check back later! 😊
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var offer in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 offer-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold">@offer.Title</h5>
                        <p class="card-text text-muted flex-grow-1">@offer.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-success fs-6">
                                💰 @offer.DiscountPercentage% OFF
                            </span>
                            <small class="text-muted">
                                Valid until: @offer.EndDate.ToString("MMMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-center border-0">
                        <a href="/MenuItems" class="btn btn-outline-primary btn-sm shadow-sm">
                            🍔 Order Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

    <style>
        /* Hover effect for cards */
        .offer-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .offer-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

            /* Responsive card height for uniformity */
            .offer-card .card-body {
                min-height: 180px;
            }

            /* Optional: make discount badge standout */
            .offer-card .badge {
                font-weight: 600;
                padding: 0.5em 0.8em;
            }
    </style>

