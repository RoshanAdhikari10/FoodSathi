@{
    ViewData["Title"] = "About Us | FoodSathi";
}

<div class="container py-5 fade-in">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">🍴 About FoodSathi</h1>
        <p class="text-muted">Your friendly partner in discovering delicious food near you!</p>
    </div>

    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="~/images/about-foodsathi.png"
                 class="img-fluid rounded-4 shadow"
                 alt="Food delivery concept with people enjoying food">
        </div>

        <div class="col-md-6">
            <h3 class="fw-semibold text-secondary mb-3">Who We Are</h3>
            <p>
                <strong>FoodSathi</strong> is a modern online food delivery and discovery platform built to make dining easier,
                faster, and more enjoyable. We connect food lovers with top-rated restaurants and local kitchens,
                ensuring every meal is just a few clicks away.
            </p>

            <h3 class="fw-semibold text-secondary mt-4 mb-3">What We Do</h3>
            <p>
                From mouth-watering momos to sizzling pizzas — we bring your favorite dishes right to your doorsteps.
                With easy ordering, transparent pricing, and trusted partners, we make sure your experience
                is smooth, satisfying, and safe.
            </p>

            <ul class="list-unstyled mt-3">
                <li>✅ Fast & secure online ordering</li>
                <li>✅ Real-time delivery tracking</li>
                <li>✅ Honest user feedback and ratings</li>
                <li>✅ Partnered with trusted restaurants</li>
            </ul>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h3 class="fw-semibold text-secondary mb-3">Our Vision</h3>
        <p class="mx-auto w-75">
            To build Nepal’s most trusted and user-friendly food delivery ecosystem —
            where every click leads to comfort, connection, and a great meal.
        </p>
    </div>

</div>

<style>
    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
