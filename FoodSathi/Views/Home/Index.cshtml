@{
    ViewData["Title"] = "Home - FoodSathi";
}

<div class="home-hero d-flex align-items-center justify-content-center text-center text-white px-3">
    <div class="content">
        <h1 class="display-4 fw-bold mb-3 text-shadow">
            Welcome to <span class="text-warning">FoodSathi</span>
        </h1>
        <p class="lead mb-4 text-shadow">
            Order your favorite meals quickly and easily — anytime, anywhere.
        </p>
        <a asp-controller="MenuItems" asp-action="Menu"
           class="btn btn-warning btn-lg rounded-pill shadow-sm px-4">
            🍴 Explore Menu
        </a>
    </div>
</div>

<style>
    /* Fullscreen background with overlay */
    .home-hero {
        min-height: 100vh;
        background: url('/images/food-bg.jpg') center center/cover no-repeat;
        position: relative;
    }

        .home-hero::before {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.55); /* Dark overlay for readability */
            z-index: 1;
        }

        /* Text content above overlay */
        .home-hero .content {
            position: relative;
            z-index: 2;
            max-width: 700px;
        }

    .text-shadow {
        text-shadow: 0 2px 6px rgba(0, 0, 0, 0.7);
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .home-hero h1

    {
        font-size: 2.5rem;
    }

    .home-hero p {
        font-size: 1.1rem;
    }

    }

    @@media (max-width: 576px) {
        .home-hero

    {
        background-position: center top;
        padding: 0 15px;
    }

    .home-hero h1 {
        font-size: 2rem;
    }

    .home-hero p {
        font-size: 1rem;
    }

    .btn {
        font-size: 0.9rem;
        padding: 0.6rem 1.2rem;
    }

    }
</style>
