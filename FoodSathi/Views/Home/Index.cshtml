<style>
    /* ===== Hero Section ===== */
    .home-hero {
        min-height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url('/images/food-bg.jpg') center center/cover no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        padding: 0 1.5rem;
        text-align: center;
    }

    .animate-fade {
        animation: fadeInUp 1.4s ease-out;
    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(40px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .text-shadow {
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.85);
    }

    .brand {
        font-family: 'Poppins', sans-serif;
        letter-spacing: 1px;
        color: #ffb703;
    }

    .explore-btn {
        font-weight: 600;
        transition: all 0.3s ease;
        background-color: #ffb703;
        border: none;
        color: #fff;
    }

        .explore-btn:hover {
            transform: translateY(-4px) scale(1.03);
            background-color: #ffc947 !important;
            box-shadow: 0 6px 20px rgba(255, 183, 3, 0.4);
            color: #222 !important;
        }

    /* ===== Featured Menu Section ===== */
    .featured-menu {
        background: linear-gradient(180deg, #fff, #f9fafb);
    }

    .text-gradient {
        background: linear-gradient(90deg, #ffb703, #ff9500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .menu-card {
        transition: transform 0.35s ease, box-shadow 0.35s ease;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.9);
    }

        .menu-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .img-container {
        position: relative;
        overflow: hidden;
    }

        .img-container img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .menu-card:hover img {
        transform: scale(1.08);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.55);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .menu-card:hover .overlay {
        opacity: 1;
    }

    .btn-gradient {
        background: linear-gradient(90deg, #ffb703, #ff9500);
        border: none;
        color: #fff;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #ff9500, #ffb703);
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(255, 183, 3, 0.4);
            color: #222 !important;
        }

    /* ===== Responsive ===== */
    @@media (max-width: 1200px) {
        .home-hero h1

    {
        font-size: 3rem;
    }

    .home-hero p {
        font-size: 1.2rem;
    }

    }

    @@media (max-width: 992px) {
        .home-hero h1

    {
        font-size: 2.6rem;
    }

    .home-hero p {
        font-size: 1.1rem;
    }

    }

    @@media (max-width: 768px) {
        .home-hero

    {
        padding: 2rem 1rem;
    }

    .home-hero h1 {
        font-size: 2.2rem;
        line-height: 1.3;
    }

    .home-hero p {
        font-size: 1rem;
    }

    .menu-card img {
        height: 200px;
    }

    }

    @@media (max-width: 576px) {
        .home-hero

    {
        background-position: top;
        padding: 3rem 1rem;
    }

    .home-hero h1 {
        font-size: 1.8rem;
    }

    .home-hero p {
        font-size: 0.95rem;
    }

    }

    /* ===== Overlay Glow ===== */
    .home-hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at top left, rgba(255, 193, 7, 0.15), transparent 70%);
        animation: pulse 6s infinite alternate ease-in-out;
        z-index: 0;
    }

    @@keyframes pulse {
        0%

    {
        opacity: 0.6;
    }

    100% {
        opacity: 0.9;
    }

    }

    .home-hero .content {
        position: relative;
        z-index: 2;
        max-width: 700px;
    }

    .customer-feedback {
        background: linear-gradient(180deg, #fff, #f8f9fa);
    }

    .feedback-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .feedback-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .text-warning i {
        margin-right: 2px;
    }

</style>
