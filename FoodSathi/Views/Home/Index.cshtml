@model IEnumerable<FoodSathi.Models.MenuItem>

@{
    ViewData["Title"] = "Home - FoodSathi";
}

<!-- Hero Section -->
<div class="home-hero d-flex align-items-center justify-content-center text-center text-white px-3">
    <div class="content animate-fade">
        <h1 class="display-4 fw-bold mb-3 text-shadow">
            Welcome to <span class="brand text-warning">FoodSathi</span>
        </h1>
        <p class="lead mb-4 text-shadow">
            Craving something delicious? Get it delivered fast and fresh — anytime, anywhere 🍕
        </p>
    </div>
</div>

<!-- 🍽️ Featured Menu Section -->
<section class="featured-menu py-5 position-relative">
    <div class="container text-center">
        <h2 class="fw-bold mb-3 text-gradient">🍽️ Featured Dishes</h2>
        <p class="text-muted mb-5 fs-5">Our chef’s handpicked specials — taste the best we offer!</p>

        <div class="row g-4 justify-content-center">
            @foreach (var item in Model.Take(3))
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card menu-card border-0 shadow-lg rounded-4 overflow-hidden h-100">
                        <div class="img-container">
                            <img src="@item.ImagePath" class="card-img-top" alt="@item.ItemName">
                            <div class="overlay d-flex align-items-center justify-content-center">
                                <a asp-controller="Order" asp-action="BuyNow" asp-route-id="@item.ItemID"
                                   class="btn btn-warning rounded-pill px-4 fw-semibold">
                                    🛒 Order Now
                                </a>
                            </div>
                        </div>
                        <div class="card-body p-4 text-start">
                            <h5 class="fw-bold text-dark">@item.ItemName</h5>
                            <p class="text-muted small mb-3">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-success fs-5">Rs. @item.Price</span>
                                <span class="badge bg-light text-success border border-success px-3 py-2">
                                    ⭐ Popular
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Explore Full Menu Button -->
        <div class="mt-5">
            <a asp-controller="MenuItems" asp-action="Index"
               class="btn btn-gradient btn-lg rounded-pill shadow-lg px-5 py-3 fw-semibold">
                🍴 Explore Full Menu
            </a>
        </div>
    </div>
</section>

<!-- 🌟 How It Works Section -->
<section class="how-it-works py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-4 text-gradient">🚀 How FoodSathi Works</h2>
        <p class="text-muted mb-5">
            Simple, fast, and delicious — here’s how FoodSathi brings fresh food to your doorstep (or lets you pick it up yourself!).
        </p>

        <div class="row g-4 justify-content-center">
            <!-- Step 1 -->
            <div class="col-md-3">
                <div class="step-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-cart-check-fill fs-1 text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-2">🛒 Order Your Meal</h4>
                    <p class="text-muted">
                        Browse our menu, pick your favorites, and place your order online with just a few clicks.
                    </p>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="col-md-3">
                <div class="step-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-egg-fried fs-1 text-danger"></i>
                    </div>
                    <h4 class="fw-bold mb-2">👨‍🍳 Cooked Fresh</h4>
                    <p class="text-muted">
                        Our expert chefs prepare your meal fresh, using quality ingredients and care in every bite.
                    </p>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="col-md-3">
                <div class="step-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-truck fs-1 text-success"></i>
                    </div>
                    <h4 class="fw-bold mb-2">🚴‍♂️ Delivered Fast</h4>
                    <p class="text-muted">
                        Prefer delivery? Our riders bring your hot meal straight to your door — fresh and on time.
                    </p>
                </div>
            </div>

            <!-- Step 4 -->
            <div class="col-md-3">
                <div class="step-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-bag-check-fill fs-1 text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-2">🏃‍♂️ Picked Up by You</h4>
                    <p class="text-muted">
                        Want it faster? Choose pickup and grab your freshly cooked order directly from your nearest FoodSathi outlet.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 💅 CSS -->
<style>
    .text-gradient {
        background: linear-gradient(45deg, #ff8a00, #e52e71);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .how-it-works {
        background: rgba(255, 249, 245, 0.8);
        backdrop-filter: blur(6px);
    }

    .step-card {
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

        .step-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            background: #fff;
        }

    .icon i {
        transition: transform 0.3s ease;
    }

    .step-card:hover .icon i {
        transform: scale(1.2) rotate(5deg);
    }
</style>


<!-- 💬 Customer Feedback Section -->
<section class="customer-feedback py-5 bg-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-4 text-gradient">💬 What Our Customers Say</h2>

        @if (ViewBag.TopFeedbacks != null && ((List<FoodSathi.Models.Feedback>)ViewBag.TopFeedbacks).Count > 0)
        {
            <div class="row g-4 justify-content-center">
                @foreach (var feedback in ViewBag.TopFeedbacks)
                {
                    <div class="col-md-4">
                        <div class="card shadow-sm border-0 rounded-4 h-100 p-4 feedback-card hover-lift">
                            <div class="text-center mb-3">
                                <!-- Avatar with first letter of user's name -->
                                <div class="avatar-circle bg-primary text-white mx-auto mb-2" style="width:50px; height:50px; border-radius:50%; display:flex; align-items:center; justify-content:center; font-weight:bold; font-size:1.2rem;">
                                    @feedback.Name.Substring(0, 1).ToUpper()
                                </div>
                                <h5 class="fw-bold text-dark mb-1">@feedback.Name</h5>
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-box-seam"></i> @feedback.ProductName
                                </p>
                            </div>

                            <!-- Rating Stars -->
                            <div class="text-warning mb-3 text-center">
                                @for (int i = 0; i < feedback.Rating; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                @for (int i = feedback.Rating; i < 5; i++)
                                {
                                    <i class="bi bi-star"></i>
                                }
                            </div>

                            <!-- Feedback Message -->
                            <p class="text-secondary fst-italic mb-2">
                                <i class="bi bi-quote"></i>
                                @(feedback.Message.Length > 100 ? feedback.Message.Substring(0, 100) + "..." : feedback.Message)
                            </p>

                            <!-- Submitted Date -->
                            <small class="text-muted">
                                <i class="bi bi-calendar3"></i>
                                @feedback.SubmittedDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                }
            </div>

            <!-- View All / Share Buttons -->
            <div class="mt-5 d-flex justify-content-center flex-wrap gap-3">
                <a asp-controller="Feedback" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-4">
                    <i class="bi bi-chat-left-text"></i> View All Feedback
                </a>
                <a asp-controller="Feedback" asp-action="Index" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                    <i class="bi bi-plus-circle"></i> Share Your Experience
                </a>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state py-5">
                <i class="bi bi-chat-left-dots fs-1 text-muted mb-3"></i>
                <p class="text-muted fs-5 mb-4">No feedback yet. Be the first to share your experience!</p>
                <a asp-controller="Feedback" asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-5">
                    <i class="bi bi-plus-circle"></i> Write First Review
                </a>
            </div>
        }
    </div>
</section>

<!-- 🛵 Why Choose FoodSathi Section -->
<section class="why-choose-foodsathi py-5 text-center">
    <div class="container">
        <h2 class="fw-bold text-gradient mb-4">🛵 Why Choose FoodSathi</h2>
        <p class="text-muted mb-5">
            We go beyond just delivering food — we deliver happiness, speed, and satisfaction.
        </p>

        <div class="row g-4 justify-content-center">
            <!-- Fast Delivery -->
            <div class="col-md-3">
                <div class="choose-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-lightning-charge-fill fs-1 text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-2">⚡ Fast Delivery</h5>
                    <p class="text-muted mb-0">
                        Your favorite meals, delivered piping hot in minutes.
                    </p>
                </div>
            </div>

            <!-- Fresh Ingredients -->
            <div class="col-md-3">
                <div class="choose-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-egg-fried fs-1 text-danger"></i>
                    </div>
                    <h5 class="fw-bold mb-2">🥗 Fresh Ingredients</h5>
                    <p class="text-muted mb-0">
                        Every dish is made with farm-fresh, high-quality ingredients.
                    </p>
                </div>
            </div>

            <!-- Easy Payment -->
            <div class="col-md-3">
                <div class="choose-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-credit-card-2-front-fill fs-1 text-info"></i>
                    </div>
                    <h5 class="fw-bold mb-2">💳 Easy Payment</h5>
                    <p class="text-muted mb-0">
                        Pay effortlessly with secure online or cash-on-delivery options.
                    </p>
                </div>
            </div>

            <!-- 24/7 Support -->
            <div class="col-md-3">
                <div class="choose-card p-4 rounded-4 shadow-sm h-100">
                    <div class="icon mb-3">
                        <i class="bi bi-headset fs-1 text-success"></i>
                    </div>
                    <h5 class="fw-bold mb-2">📞 24/7 Support</h5>
                    <p class="text-muted mb-0">
                        We’re always here — anytime, anywhere you need us.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-section py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-3 text-gradient">Contact</h2>
        <p class="mb-4">We’d love to hear from you! Whether it’s feedback, support, or partnership — drop us a message below.</p>
        <!-- Contact Form -->
        <form class="contact-form mx-auto p-4 rounded-4 shadow-lg glass-container" style="max-width: 600px;">
            <div class="mb-3">
                <input type="text" class="form-control rounded-pill" placeholder="Full Name" required>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control rounded-pill" placeholder="Email" required>
            </div>
            <div class="mb-3">
                <textarea class="form-control rounded-4" rows="4" placeholder="Your Message..." required></textarea>
            </div>
            <button type="submit" class="btn btn-warning rounded-pill px-4 fw-bold shadow">Send Message</button>
        </form>
    </div>
</section>

