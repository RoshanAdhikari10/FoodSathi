@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "User Management";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">👥 Registered Users</h2>
            <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-outline-secondary rounded-pill px-4">🏠 Back</a>
        </div>

        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>#</th>
                    <th>Email</th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    var nonAdminUsers = new List<IdentityUser>();
                    foreach (var user in Model)
                    {
                        var roles = await UserManager.GetRolesAsync(user);
                        if (!roles.Contains("Admin"))
                        {
                            nonAdminUsers.Add(user);
                        }
                    }
                }

                @if (nonAdminUsers.Any())
                {
                    foreach (var user in nonAdminUsers)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td>@user.Email</td>
                            <td class="text-center">
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3" onclick="return confirm('Delete this user?');">
                                        🗑️ Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">No regular users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
