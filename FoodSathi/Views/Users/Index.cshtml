@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">👥 Registered Users</h2>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">🏠 Back</a>
        </div>

        <table class="table table-hover table-bordered align-middle">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>#</th>
                    <th>Email</th>
                    <th>User ID</th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int i = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td>@user.Email</td>
                            <td>@user.Id</td>
                            <td class="text-center">
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3" onclick="return confirm('Delete this user?');">
                                        🗑️ Delete
                                    </button>
                                </form>

                                <form asp-action="AssignRole" method="post" class="d-inline ms-2">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <select name="role" class="form-select form-select-sm d-inline w-auto">
                                        <option value="Admin">Admin</option>
                                        <option value="User">User</option>
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-success rounded-pill px-3 ms-1">
                                        🎯 Assign
                                    </button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">No users registered yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
