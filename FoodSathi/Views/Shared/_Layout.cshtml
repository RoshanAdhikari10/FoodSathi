@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodSathi</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodSathi.styles.css" asp-append-version="true" />
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

@RenderSection("Styles", required: false)


@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}




<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" height="40px" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminDashboard">Admin Dashboard</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="MenuItems" asp-action="Index">Menu</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Orders">My Order</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="">Cart</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="FeedBack" asp-action="Index">Feedback</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item me-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MenuItems" asp-action="Index">Menu</a>
                            </li>

                            <li class="nav-item me-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="foodsathi-footer text-white pt-5 mt-auto">
        <div class="container">
            <div class="row gy-4 text-center text-md-start">
                <div class="col-md-4">
                    <h4 class="fw-bold text-gradient mb-2">🍽️ FoodSathi</h4>
                    <p class="tagline mb-3">
                        Delivering Freshness & Happiness to Your Doorstep.
                    </p>

                    <div class="social-icons mt-3">
                        <a href="#" class="social-link"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="social-link"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="social-link"><i class="bi bi-tiktok"></i></a>
                        <a href="#" class="social-link"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="social-link"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="Index">🏠 Home</a></li>
                        <li><a asp-controller="MenuItems" asp-action="Index">🍴 Menu</a></li>
                        <li><a asp-controller="Cart" asp-action="Index">🛒 Cart</a></li>
                        <li><a asp-controller="Home" asp-action="About">ℹ️ About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">🔒 Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">Contact Us</h5>
                    <p class="mb-1">
                        <i class="bi bi-geo-alt-fill text-warning me-2"></i>
                        Pokhara-13, Kaski, Gandaki, Nepal
                    </p>
                    <p class="mb-1">
                        <i class="bi bi-telephone-fill text-info me-2"></i>
                        +9779817113485
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-envelope-fill text-danger me-2"></i>
                        chhetrirosun@gmail.com
                    </p>
                </div>
            </div>

            <div class="text-center mt-4 pt-3 border-top border-secondary small opacity-75">
                © 2025 FoodSathi — All Rights Reserved
            </div>
        </div>
    </footer>

    <style>
        .foodsathi-footer {
            background: #000;
            backdrop-filter: blur(8px);
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            position: relative;
            overflow: hidden;
        }

            .foodsathi-footer::before {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(255, 255, 255, 0.05);
                z-index: 0;
            }

            .foodsathi-footer .container {
                position: relative;
                z-index: 1;
            }

        .text-gradient {
            background: linear-gradient(135deg, #ff9800, #e52e71);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .tagline {
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.8);
            font-style: italic;
            max-width: 260px;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            justify-content: md-start;
            gap: 12px;
        }

        .social-link {
            color: rgba(255, 255, 255, 0.8);
            font-size: 1.3rem;
            transition: all 0.3s ease;
        }

            .social-link:hover {
                color: #ff9800;
                transform: translateY(-3px);
            }

        .footer-links a {
            display: block;
            color: rgba(255, 255, 255, 0.85);
            font-size: 0.95rem;
            text-decoration: none;
            margin-bottom: 6px;
            transition: all 0.3s ease;
        }

            .footer-links a:hover {
                color: #fff;
                text-decoration: underline;
            }

        .footer-links li {
            list-style: none;
        }

        @@media (max-width: 768px) {
            .foodsathi-footer

        {
            text-align: center;
        }

        .social-icons {
            justify-content: center;
        }

        .footer-links a {
            display: inline-block;
            margin: 5px 10px;
        }

        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
