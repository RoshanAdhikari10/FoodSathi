@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodSathi</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodSathi.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

@RenderSection("Styles", required: false)


@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}




<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" height="40px" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <!-- Only for Admin -->
                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminDashboard">Admin Dashboard</a>
                                </li>
                            }
                            else
                            {
                                <!-- For Normal Users -->
                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="MenuItems" asp-action="Index">Menu</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Orders">My Order</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="">Cart</a>
                                </li>

                                <li class="nav-item me-5">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="FeedBack" asp-action="Index">Feedback</a>
                                </li>
                            }
                        }
                        else
                        {
                            <!-- For Guests (not logged in) -->
                            <li class="nav-item me-5">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MenuItems" asp-action="Index">Menu</a>
                            </li>
                        }
                    </ul>

                    <!-- Responsive Search Bar -->
                    <form class="d-flex my-2 my-lg-0 search-box" role="search">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Search..." aria-label="Search">
                            <button class="btn" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="foodsathi-footer text-center text-white py-5 mt-5">
        <div class="container">
            <!-- 🏷️ Brand Identity -->
            <h3 class="fw-bold mb-2 text-gradient">🍽️ FoodSathi</h3>
            <p class="tagline mb-4">Delivering Freshness & Happiness to Your Doorstep</p>

            <!-- 📞 Contact Info -->
            <div class="contact-info mb-4">
                <p class="mb-1"><i class="bi bi-geo-alt-fill text-warning me-2"></i> Pokhara-13, Kaski, Gandaki, Nepal</p>
                <p class="mb-1"><i class="bi bi-telephone-fill text-info me-2"></i> +97798766009112</p>
                <p class="mb-0"><i class="bi bi-envelope-fill text-danger me-2"></i> chhetrirosun@gmail.com</p>
            </div>

            <!-- 🔗 Footer Links -->
            <div class="footer-links mb-3">
                <a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none mx-2">Privacy Policy</a>
            </div>

            <!-- © Copyright -->
            <div class="small text-light opacity-75 mt-3">
                © 2025 FoodSathi — All Rights Reserved
            </div>
        </div>
    </footer>

    <!-- 💅 CSS -->
    <style>
        .foodsathi-footer {
            background: black;
            backdrop-filter: blur(8px);
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

            .foodsathi-footer::before {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(255, 255, 255, 0.05);
                z-index: 0;
            }

            .foodsathi-footer .container {
                position: relative;
                z-index: 1;
            }

        .text-gradient {
            background: linear-gradient(135deg, #ff9800, #e52e71);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .tagline {
            font-size: 1rem;
            font-style: italic;
            color: rgba(255, 255, 255, 0.85);
            letter-spacing: 0.5px;
        }

        .contact-info p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0;
            font-size: 0.95rem;
        }

        .contact-info i {
            font-size: 1.1rem;
        }

        .footer-links a {
            font-size: 0.95rem;
            opacity: 0.9;
            transition: all 0.3s ease;
        }

            .footer-links a:hover {
                color: #fff;
                opacity: 1;
                text-decoration: underline;
            }
    </style>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
