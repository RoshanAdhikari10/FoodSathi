@model List<FoodSathi.Models.Cart>

@{
    ViewData["Title"] = "🛒 Your Cart";
    var grandTotal = Model.Sum(i => i.MenuItem.Price * i.Quantity);
}

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold text-primary">🛒 Your Shopping Cart</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm p-4 rounded">
            <h5 class="mb-2">Your cart is empty 😢</h5>
            <p>Start adding some delicious items to your cart!</p>
            <a asp-controller="MenuItems" asp-action="Index" class="btn btn-primary">🍴 Browse Menu</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-hover align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Image</th>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.MenuItem.ImageURL" class="rounded shadow-sm" style="width:80px; height:60px; object-fit:cover;" />
                                    </td>
                                    <td class="fw-semibold">@item.MenuItem.ItemName</td>
                                    <td><span class="badge bg-info text-dark">Rs. @item.MenuItem.Price</span></td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Quantity</span>
                                    </td>
                                    <td class="fw-bold text-success">
                                        Rs. @(item.MenuItem.Price* item.Quantity)
                                    </td>
                                    <td>
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.CartID"
                                           class="btn btn-sm btn-outline-danger rounded-pill">
                                            ❌ Remove
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a asp-controller="Cart" asp-action="Clear" class="btn btn-outline-warning rounded-pill">
                        🧹 Clear Cart
                    </a>
                    <a asp-controller="MenuItems" asp-action="Index" class="btn btn-outline-primary rounded-pill">
                        🍴 Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title text-center fw-bold">💳 Order Summary</h5>
                        <hr />
                        <p class="d-flex justify-content-between">
                            <span>Items:</span>
                            <span class="fw-semibold">@Model.Sum(i => i.Quantity)</span>
                        </p>
                        <p class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span class="fw-semibold">Rs. @grandTotal</span>
                        </p>

                        <!-- Delivery Selection -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">🚚 Delivery Option</label>
                            <select id="deliveryOption" class="form-select">
                                <option value="0">Free Delivery (3-5 days)</option>
                                <option value="100">Express (1-2 days) - Rs. 100</option>
                                <option value="50">Standard (2-4 days) - Rs. 50</option>
                                <option value="-50">Pickup (Store) - Save Rs. 50</option>
                            </select>
                        </div>

                        <p class="d-flex justify-content-between">
                            <span>Delivery:</span>
                            <span id="deliveryCharge" class="fw-semibold text-info">Rs. 0</span>
                        </p>
                        <hr />
                        <p class="d-flex justify-content-between fs-5 fw-bold text-primary">
                            <span>Grand Total:</span>
                            <span id="finalTotal">Rs. @grandTotal</span>
                        </p>

                        <a href="#" class="btn btn-success w-100 mt-3 rounded-pill fw-bold shadow">
                            ✅ Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById("deliveryOption").addEventListener("change", function () {
            var deliveryCharge = parseInt(this.value);
            var subtotal = @grandTotal;
            var finalTotal = subtotal + deliveryCharge;

            document.getElementById("deliveryCharge").innerText = "Rs. " + deliveryCharge;
            document.getElementById("finalTotal").innerText = "Rs. " + finalTotal;
        });
    </script>
}
