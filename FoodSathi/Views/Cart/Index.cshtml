@model List<FoodSathi.Models.Cart>

@{
    ViewData["Title"] = "🛒 Your Cart";
}

<h2>🛒 Your Cart</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Item</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.MenuItem.ImageURL" style="width:80px;height:60px;object-fit:cover;" /></td>
                    <td>@item.MenuItem.ItemName</td>
                    <td>Rs. @item.MenuItem.Price</td>
                    <td>@item.Quantity</td>
                    <td class="fw-bold text-success">Rs. @(item.MenuItem.Price* item.Quantity)</td>
                    <td>
                        <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.CartID" class="btn btn-sm btn-danger">❌ Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a asp-controller="Cart" asp-action="Clear" class="btn btn-warning">🧹 Clear Cart</a>
        <a href="#" class="btn btn-success">✅ Checkout</a>
    </div>
}
