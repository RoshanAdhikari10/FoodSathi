@model List<FoodSathi.Models.Cart>

@{
    ViewData["Title"] = "🛒 Your Cart";
    var grandTotal = Model.Sum(i => i.MenuItem.Price * i.Quantity);
}

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold text-primary">🛒 Your Shopping Cart</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm p-4 rounded">
            <h5 class="mb-2">Your cart is empty 😢</h5>
            <p>Start adding some delicious items to your cart!</p>
            <a asp-controller="MenuItems" asp-action="Index" class="btn btn-primary rounded-pill">
                🍴 Browse Menu
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <!-- Desktop Table -->
                <div class="table-responsive d-none d-sm-block shadow-sm rounded-3">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>Image</th>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.MenuItem.ImageURL"
                                             class="rounded shadow-sm"
                                             style="width:80px; height:60px; object-fit:cover;" />
                                    </td>
                                    <td class="fw-semibold">@item.MenuItem.ItemName</td>
                                    <td><span class="badge bg-info text-dark">Rs. @item.MenuItem.Price</span></td>
                                    <td><span class="badge bg-secondary">@item.Quantity</span></td>
                                    <td class="fw-bold text-success">Rs. @(item.MenuItem.Price* item.Quantity)</td>
                                    <td>
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.CartID"
                                           class="btn btn-sm btn-outline-danger rounded-pill">
                                            ❌ Remove
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Mobile Stacked Cards -->
                <div class="d-block d-sm-none">
                    @foreach (var item in Model)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="row g-0 align-items-center">
                                <div class="col-4">
                                    <img src="@item.MenuItem.ImageURL" class="img-fluid rounded-start" />
                                </div>
                                <div class="col-8">
                                    <div class="card-body p-2">
                                        <h6 class="card-title fw-bold mb-1">@item.MenuItem.ItemName</h6>
                                        <p class="mb-1"><span class="badge bg-info text-dark">Rs. @item.MenuItem.Price</span> × @item.Quantity</p>
                                        <p class="mb-1 fw-bold text-success">Total: Rs. @(item.MenuItem.Price* item.Quantity)</p>
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.CartID"
                                           class="btn btn-sm btn-outline-danger rounded-pill w-100">❌ Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="mt-3 d-flex flex-column flex-sm-row justify-content-between gap-2">
                    <a asp-controller="Cart" asp-action="Clear" class="btn btn-outline-warning rounded-pill w-100 w-sm-auto">
                        🧹 Clear Cart
                    </a>
                    <a asp-controller="MenuItems" asp-action="Menu" class="btn btn-outline-primary rounded-pill w-100 w-sm-auto">
                        🍴 Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="card-title text-center fw-bold text-success mb-3">💳 Order Summary</h5>
                        <hr />
                        <p class="d-flex justify-content-between">
                            <span>Items:</span>
                            <span class="fw-semibold">@Model.Sum(i => i.Quantity)</span>
                        </p>
                        <p class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span id="subtotal" class="fw-semibold">Rs. @grandTotal</span>
                        </p>

                        <!-- Delivery Selection -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-primary">🚚 Delivery Option</label>
                            <select id="deliveryOption" class="form-select shadow-sm">
                                <option value="0" selected>Free Delivery (3–5 days)</option>
                                <option value="100">Express (1–2 days) — Rs. 100</option>
                                <option value="50">Standard (2–4 days) — Rs. 50</option>
                                <option value="-50">Pickup (Store) — Save Rs. 50</option>
                            </select>
                        </div>

                        <p class="d-flex justify-content-between">
                            <span>Delivery:</span>
                            <span id="deliveryCharge" class="fw-semibold text-info">Rs. 0</span>
                        </p>
                        <hr />
                        <p class="d-flex justify-content-between fs-5 fw-bold text-primary">
                            <span>Grand Total:</span>
                            <span id="finalTotal" class="text-success">Rs. @grandTotal</span>
                        </p>

                        <a asp-controller="Payment" asp-action="Pay"
                           class="btn btn-success w-100 mt-3 rounded-pill fw-bold shadow">
                            ✅ Proceed to Payment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        const deliverySelect = document.getElementById("deliveryOption");
        const deliveryChargeText = document.getElementById("deliveryCharge");
        const finalTotalText = document.getElementById("finalTotal");
        const subtotalValue = @grandTotal;

        function formatCurrency(amount) {
            return "Rs. " + amount.toLocaleString("en-IN");
        }

        function updateTotals() {
            const deliveryCharge = parseInt(deliverySelect.value);
            const finalTotal = subtotalValue + deliveryCharge;

            finalTotalText.style.transition = "transform 0.2s ease, color 0.2s ease";
            finalTotalText.style.transform = "scale(1.2)";
            finalTotalText.style.color = "#198754";

            setTimeout(() => {
                finalTotalText.style.transform = "scale(1)";
                finalTotalText.style.color = "";
            }, 200);

            deliveryChargeText.innerText = formatCurrency(deliveryCharge);
            finalTotalText.innerText = formatCurrency(finalTotal);
        }

        updateTotals();
        deliverySelect.addEventListener("change", updateTotals);
    </script>
}

<style>
    select.form-select:focus {
        box-shadow: 0 0 10px rgba(13, 110, 253, 0.3);
        border-color: #0d6efd;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        table img

    {
        width: 60px;
        height: 45px;
    }

    .table td, .table th {
        font-size: 0.9rem;
    }

    }

    @@media (max-width: 576px) {
        .card-body

    {
        padding: 0.8rem !important;
    }

    .btn {
        font-size: 0.9rem;
    }

    table td, table th {
        white-space: nowrap;
    }

    }
</style>
