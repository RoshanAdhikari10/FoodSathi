@model List<FoodSathi.Models.Cart>

@{
    ViewData["Title"] = "🛒 Your Cart";
    var grandTotal = Model.Sum(i => i.MenuItem.Price * i.Quantity);
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-gradient">🛒 Your Shopping Cart</h2>
        <p class="text-muted">Review your items before proceeding to checkout</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center shadow-lg border border-2 border-primary-subtle p-5 rounded-4 bg-glass">
            <h5 class="fw-semibold mb-2">Your cart is empty 😢</h5>
            <p class="text-secondary">Start adding some delicious items to your cart!</p>
            <a asp-controller="MenuItems" asp-action="Index" class="btn btn-primary rounded-pill px-4 py-2 fw-semibold shadow">
                🍴 Browse Menu
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <!-- Desktop Table -->
                <div class="table-responsive shadow-lg rounded-4 overflow-hidden bg-glass">
                    <table class="table align-middle mb-0">
                        <thead class="table-gradient text-white">
                            <tr>
                                <th>Image</th>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="cart-row">
                                    <td>
                                        <img src="@item.MenuItem.ImagePath"
                                             class="rounded-3 shadow-sm"
                                             style="width:80px; height:60px; object-fit:cover;" />
                                    </td>
                                    <td class="fw-semibold">@item.MenuItem.ItemName</td>
                                    <td><span class="badge bg-info-subtle text-dark">Rs. @item.MenuItem.Price</span></td>
                                    <td><span class="badge bg-secondary">@item.Quantity</span></td>
                                    <td class="fw-bold text-success">Rs. @(item.MenuItem.Price* item.Quantity)</td>
                                    <td>
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.CartID"
                                           class="btn btn-sm btn-outline-danger rounded-pill shadow-sm px-3">
                                            ❌ Remove
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Mobile Cards -->
                <div class="d-block d-sm-none mt-3">
                    @foreach (var item in Model)
                    {
                        <div class="card mb-3 shadow-lg border-0 bg-glass rounded-4">
                            <div class="row g-0 align-items-center">
                                <div class="col-4">
                                    <img src="@item.MenuItem.ImagePath" class="img-fluid rounded-start" />
                                </div>
                                <div class="col-8">
                                    <div class="card-body p-3">
                                        <h6 class="fw-bold mb-1">@item.MenuItem.ItemName</h6>
                                        <p class="mb-1"><span class="badge bg-info text-dark">Rs. @item.MenuItem.Price</span> × @item.Quantity</p>
                                        <p class="fw-bold text-success mb-2">Total: Rs. @(item.MenuItem.Price* item.Quantity)</p>
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.CartID"
                                           class="btn btn-sm btn-outline-danger rounded-pill w-100 shadow-sm">❌ Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex flex-column flex-sm-row justify-content-between gap-3">
                    <a asp-controller="Cart" asp-action="Clear" class="btn btn-outline-warning rounded-pill px-4 py-2 fw-semibold shadow-sm">
                        🧹 Clear Cart
                    </a>
                    <a asp-controller="MenuItems" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 py-2 fw-semibold shadow-sm">
                        🍴 Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-xl border-0 rounded-4 bg-gradient-to-tr">
                    <div class="card-body p-4">
                        <h5 class="text-center fw-bold text-success mb-3">💳 Order Summary</h5>
                        <hr class="opacity-25" />
                        <p class="d-flex justify-content-between">
                            <span>Items:</span>
                            <span class="fw-semibold">@Model.Sum(i => i.Quantity)</span>
                        </p>
                        <p class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span class="fw-semibold text-success">Rs. @grandTotal</span>
                        </p>
                        <hr class="opacity-25" />
                        <p class="d-flex justify-content-between fs-5 fw-bold text-primary">
                            <span>Grand Total:</span>
                            <span class="text-success">Rs. @grandTotal</span>
                        </p>

                        <a asp-controller="Order"
                           asp-action="Checkout"
                           asp-route-fromCart="true"
                           class="btn btn-success w-100 mt-3 rounded-pill fw-bold py-2 shadow-lg glow-btn">
                            ✅ Proceed to Payment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Premium gradient title */
    .text-gradient {
        background: linear-gradient(90deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Glassmorphism background */
    .bg-glass {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Gradient header */
    .table-gradient {
        background: linear-gradient(90deg, #0d6efd, #6610f2);
    }

    /* Card hover animation */
    .card, .cart-row {
        transition: all 0.3s ease;
    }

        .card:hover, .cart-row:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    /* Button glow animation */
    .glow-btn {
        position: relative;
        overflow: hidden;
        transition: 0.4s;
    }

        .glow-btn::after {
            content: "";
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: 0.5s;
        }

        .glow-btn:hover::after {
            left: 100%;
        }

    .bg-gradient-to-tr {
        background: linear-gradient(to top right, #ffffff, #f8f9fa, #e8f0ff);
    }

    /* Responsive Tweaks */
    @@media (max-width: 992px) {
        .table td, .table th {
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 576px) {
        .btn {
            font-size: 0.9rem;
        }

        .card-body {
            padding: 0.9rem !important;
        }
    }
</style>
