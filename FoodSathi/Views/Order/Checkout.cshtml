@model FoodSathi.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout | FoodSathi";
    var fromCart = Model.FromCart;
}

<div class="container py-5">
    <div class="checkout-wrapper mx-auto shadow-lg rounded-5 overflow-hidden glass-container">
        <!-- Header -->
        <div class="text-center p-5 header-gradient text-white">
            <h2 class="fw-bold mb-2"><i class="bi bi-bag-check-fill me-2"></i>Secure Checkout</h2>
            <p class="opacity-75">Complete your order and enjoy delicious food delivered fast 🍱</p>
        </div>

        <div class="p-4 p-md-5 bg-white">
            <!-- 🧾 Order Summary -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-receipt-cutoff me-2 text-success"></i>Order Summary
                </h5>

                <div class="order-summary table-responsive">
                    @if (fromCart)
                    {
                        <table class="table table-borderless align-middle text-center">
                            <thead class="bg-light">
                                <tr class="fw-semibold text-muted">
                                    <th>Item</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>@item.MenuItem.ItemName</td>
                                        <td>@item.Quantity</td>
                                        <td>Rs. @item.MenuItem.Price</td>
                                        <td class="fw-semibold text-success">Rs. @(item.MenuItem.Price* item.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="row g-3">
                            <div class="col-6"><strong>Item:</strong></div>
                            <div class="col-6 text-end">@Model.SingleOrder?.ItemName</div>
                            <div class="col-6"><strong>Quantity:</strong></div>
                            <div class="col-6 text-end">@Model.SingleOrder?.Quantity</div>
                            <div class="col-6"><strong>Subtotal:</strong></div>
                            <div class="col-6 text-end text-danger">Rs. @Model.TotalAmount</div>
                        </div>
                    }

                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Delivery Charge</span>
                        <span>Rs. <span id="deliveryCharge">0</span></span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="fw-bold">Total</span>
                        <span class="fw-bold text-success">Rs. <span id="finalTotal">@Model.TotalAmount</span></span>
                    </div>
                </div>
            </section>

            <!-- 🚚 Delivery Options -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-truck me-2 text-success"></i>Delivery Option
                </h5>

                <div class="row g-4">
                    <div class="col-md-4">
                        <!-- 🔹 Standard delivery now charges Rs. 50 -->
                        <div class="option-card delivery-option active" data-value="Standard" data-charge="50">
                            <i class="bi bi-truck fs-2 text-success"></i>
                            <h6 class="fw-bold mt-2">Standard</h6>
                            <small class="text-muted">45–60 mins</small>
                            <span class="badge bg-success-subtle text-success mt-2">Rs. 50</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card delivery-option" data-value="Express" data-charge="100">
                            <i class="bi bi-lightning-charge-fill fs-2 text-danger"></i>
                            <h6 class="fw-bold mt-2">Express</h6>
                            <small class="text-muted">20–30 mins</small>
                            <span class="badge bg-danger-subtle text-danger mt-2">Rs. 100</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card delivery-option" data-value="Pickup" data-charge="0">
                            <i class="bi bi-shop fs-2 text-primary"></i>
                            <h6 class="fw-bold mt-2">Pickup</h6>
                            <small class="text-muted">Collect yourself</small>
                            <span class="badge bg-primary-subtle text-primary mt-2">Free</span>
                        </div>
                    </div>
                </div>
            </section>

            </section>

            <!-- 🏠 Address -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-geo-alt-fill me-2 text-danger"></i>Delivery Address
                </h5>
                <textarea id="deliveryAddress" class="form-control p-3 rounded-4 shadow-sm"
                          placeholder="Enter your complete delivery address..." rows="3" required></textarea>
            </section>
            <!-- 📱 Phone Number -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-telephone-fill me-2 text-danger"></i>Phone Number
                </h5>
                <input id="phoneNumber" type="tel"
                       class="form-control p-3 rounded-4 shadow-sm"
                       placeholder="Enter your phone number..."
                       required
                       pattern="^\+?\d{10,15}$"
                       title="Please enter a valid phone number with 10-15 digits. Example: +9779817113485">
            </section>


            <!-- 💳 Payment Options -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-credit-card-fill me-2 text-primary"></i>Payment Method
                </h5>

                <div class="row g-4 text-center">
                    <div class="col-md-4">
                        <div class="option-card payment-option active" data-value="Card">
                            <img src="/images/card.png" class="img-fluid mb-2" style="height: 40px;" alt="Card">
                            <h6 class="fw-bold">Card</h6>
                            <small class="text-muted">Visa / MasterCard</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card payment-option" data-value="Wallet">
                            <img src="/images/wallet.png" class="img-fluid mb-2" style="height: 40px;" alt="Wallet">
                            <h6 class="fw-bold">Digital Wallet</h6>
                            <small class="text-muted">eSewa / Khalti</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card payment-option" data-value="Cash">
                            <img src="/images/cash.jpg" class="img-fluid mb-2" style="height: 40px;" alt="Cash">
                            <h6 class="fw-bold">Cash on Delivery</h6>
                            <small class="text-muted">Pay when delivered</small>
                        </div>
                    </div>
                </div>
            </section>

            <!-- ✅ Confirm -->
            <div class="d-grid gap-3 mt-4">
                <button id="confirmOrderBtn" class="btn btn-lg btn-gradient rounded-pill fw-bold py-3">
                    Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>
                </button>
                <a asp-controller="MenuItems" asp-action="Menu"
                   class="btn btn-outline-secondary btn-lg rounded-pill fw-semibold">
                    <i class="bi bi-arrow-left-circle me-2"></i>Back to Menu
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center py-3 small text-muted bg-light">
            🔒 Secure Checkout • Powered by <strong>FoodSathi ©2025</strong>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Separate delivery and payment option cards
        const deliveryCards = document.querySelectorAll(".delivery-option");
        const paymentCards = document.querySelectorAll(".payment-option");
        
        const deliveryChargeEl = document.getElementById("deliveryCharge");
        const finalTotalEl = document.getElementById("finalTotal");
        const confirmBtn = document.getElementById("confirmOrderBtn");
        
        let basePrice = parseFloat("@Model.TotalAmount");
        let selectedDelivery = "Standard";
        let selectedPayment = "Card";

            let deliveryCharge = 50; // Default Standard Delivery charge
    deliveryChargeEl.textContent = deliveryCharge.toFixed(2);
    finalTotalEl.textContent = (basePrice + deliveryCharge).toFixed(2);

        const fromCart = @fromCart.ToString().ToLower();
        const orderId = "@(Model?.SingleOrder?.OrderID ?? 0)";



        // ✅ Handle delivery option selection
        deliveryCards.forEach(card => {
            card.addEventListener("click", () => {
                deliveryCards.forEach(c => c.classList.remove("active"));
                card.classList.add("active");

                selectedDelivery = card.dataset.value;
                const charge = parseFloat(card.dataset.charge);
                deliveryChargeEl.textContent = charge.toFixed(2);
                finalTotalEl.textContent = (basePrice + charge).toFixed(2);

                 // ✅ Hide address for Pickup option
                if (selectedDelivery === "Pickup") {
                    addressSection.style.display = "none";
                } else {
                    addressSection.style.display = "block";
                }
            });
        });

        // ✅ Handle payment method selection
        paymentCards.forEach(card => {
            card.addEventListener("click", () => {
                paymentCards.forEach(c => c.classList.remove("active"));
                card.classList.add("active");
                selectedPayment = card.dataset.value;
                
                // Update button text based on payment method
                if (selectedPayment === "Cash") {
                    confirmBtn.innerHTML = 'Place Order (COD) <i class="bi bi-cash-coin ms-2"></i>';
                } else {
                    confirmBtn.innerHTML = 'Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>';
                }
            });
        });



        // ✅ Handle confirm button click
        confirmBtn.addEventListener("click", async (e) => {
            e.preventDefault();

            const finalTotal = document.getElementById("finalTotal").textContent;
            const address = document.getElementById("deliveryAddress").value.trim();

              // Skip address validation for Pickup
            if (selectedDelivery !== "Pickup" && !address) {
                alert("⚠️ Please enter your delivery address before proceeding!");
                return;
            }

            // Validate address
            if (!address) {
                alert("⚠️ Please enter your delivery address before proceeding!");
                return;
            }

            // Show loading state
            confirmBtn.disabled = true;
            confirmBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';

            // ✅ Update cart with delivery info before proceeding (for cart purchases)
            if (fromCart) {
                try {
                    const response = await fetch('/Cart/UpdateCartDeliveryInfo', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `address=${encodeURIComponent(address)}&deliveryOption=${encodeURIComponent(selectedDelivery)}`
                    });

                    const result = await response.json();
                    if (!result.success) {
                        alert("Failed to update cart. Please try again.");
                        confirmBtn.disabled = false;
                        confirmBtn.innerHTML = 'Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>';
                        return;
                    }
                } catch (error) {
                    console.error("Error updating cart:", error);
                    alert("An error occurred. Please try again.");
                    confirmBtn.disabled = false;
                    confirmBtn.innerHTML = 'Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>';
                    return;
                }
            } else {
                // For single order, update the order record
                try {
                    const response = await fetch('/Order/UpdateOrderDeliveryInfo', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `orderId=${orderId}&address=${encodeURIComponent(address)}&deliveryOption=${encodeURIComponent(selectedDelivery)}`
                    });

                    const result = await response.json();
                    if (!result.success) {
                        alert("Failed to update order. Please try again.");
                        confirmBtn.disabled = false;
                        confirmBtn.innerHTML = 'Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>';
                        return;
                    }
                } catch (error) {
                    console.error("Error updating order:", error);
                    alert("An error occurred. Please try again.");
                    confirmBtn.disabled = false;
                    confirmBtn.innerHTML = 'Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>';
                    return;
                }
            }

            // ✅ Navigate based on payment method
            if (selectedPayment === "Card") {
                if (fromCart) {
                    window.location.href = `/Payment/PayByCardFromCart`;
                } else {
                    window.location.href = `/Payment/PayByCard?id=${orderId}&amount=${finalTotal}`;
                }
            } 
            else if (selectedPayment === "Wallet") {
                if (fromCart) {
                    window.location.href = `/Payment/PayByWalletFromCart`;
                } else {
                    window.location.href = `/Payment/PayByWallet?id=${orderId}&amount=${finalTotal}`;
                }
            } 
            else if (selectedPayment === "Cash") {
                if (fromCart) {
                    window.location.href = `/Payment/CashOnDeliveryFromCart`;
                } else {
                    window.location.href = `/Payment/CashOnDelivery?id=${orderId}`;
                }
            }
        });

    });


</script>


<!-- 🌈 Styles -->
<style>
    .glass-container {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .header-gradient {
        background: linear-gradient(135deg, #198754, #0d6efd);
    }

    .option-card {
        border: 2px solid #e0e0e0;
        border-radius: 20px;
        background: #fff;
        padding: 20px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .option-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 18px rgba(0, 0, 0, 0.08);
            border-color: #198754;
        }

        .option-card.active {
            border-color: #198754;
            background: #f6fff8;
            box-shadow: 0 5px 20px rgba(25, 135, 84, 0.1);
        }

    .btn-gradient {
        background: linear-gradient(90deg, #198754, #0d6efd);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #157347, #0b5ed7);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.2);
        }

    textarea {
        border: 2px solid #dee2e6;
        transition: all 0.3s ease;
    }

        textarea:focus {
            border-color: #198754;
            box-shadow: 0 0 6px rgba(25, 135, 84, 0.25);
        }

    @@media (max-width: 768px) {
        .option-card {
            padding: 15px;
        }

        .checkout-wrapper {
            border-radius: 20px;
        }
    }
</style>