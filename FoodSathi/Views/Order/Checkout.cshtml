@model FoodSathi.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout | FoodSathi";
    var fromCart = Model.FromCart;
}

<div class="container py-5">
    <div class="checkout-wrapper mx-auto shadow-lg rounded-5 overflow-hidden glass-container">
        <!-- Header -->
        <div class="text-center p-5 header-gradient text-white">
            <h2 class="fw-bold mb-2"><i class="bi bi-bag-check-fill me-2"></i>Secure Checkout</h2>
            <p class="opacity-75">Complete your order and enjoy delicious food delivered fast 🍱</p>
        </div>

        <div class="p-4 p-md-5 bg-white">
            <!-- 🧾 Order Summary -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-receipt-cutoff me-2 text-success"></i>Order Summary
                </h5>

                <div class="order-summary table-responsive">
                    @if (fromCart)
                    {
                        <table class="table table-borderless align-middle text-center">
                            <thead class="bg-light">
                                <tr class="fw-semibold text-muted">
                                    <th>Item</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>@item.MenuItem.ItemName</td>
                                        <td>@item.Quantity</td>
                                        <td>Rs. @item.MenuItem.Price</td>
                                        <td class="fw-semibold text-success">Rs. @(item.MenuItem.Price* item.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="row g-3">
                            <div class="col-6"><strong>Item:</strong></div>
                            <div class="col-6 text-end">@Model.SingleOrder?.ItemName</div>
                            <div class="col-6"><strong>Quantity:</strong></div>
                            <div class="col-6 text-end">@Model.SingleOrder?.Quantity</div>
                            <div class="col-6"><strong>Subtotal:</strong></div>
                            <div class="col-6 text-end text-danger">Rs. @Model.TotalAmount</div>
                        </div>
                    }

                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Delivery Charge</span>
                        <span>Rs. <span id="deliveryCharge">0</span></span>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="fw-bold">Total</span>
                        <span class="fw-bold text-success">Rs. <span id="finalTotal">@Model.TotalAmount</span></span>
                    </div>
                </div>
            </section>

            <!-- 🚚 Delivery Options -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-truck me-2 text-success"></i>Delivery Option
                </h5>

                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="option-card active" data-value="Standard" data-charge="0">
                            <i class="bi bi-truck fs-2 text-success"></i>
                            <h6 class="fw-bold mt-2">Standard</h6>
                            <small class="text-muted">45–60 mins</small>
                            <span class="badge bg-success-subtle text-success mt-2">Free</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card" data-value="Express" data-charge="100">
                            <i class="bi bi-lightning-charge-fill fs-2 text-danger"></i>
                            <h6 class="fw-bold mt-2">Express</h6>
                            <small class="text-muted">20–30 mins</small>
                            <span class="badge bg-danger-subtle text-danger mt-2">Rs. 100</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card" data-value="Pickup" data-charge="0">
                            <i class="bi bi-shop fs-2 text-primary"></i>
                            <h6 class="fw-bold mt-2">Pickup</h6>
                            <small class="text-muted">Collect yourself</small>
                            <span class="badge bg-primary-subtle text-primary mt-2">Free</span>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="selectedDeliveryOption" name="DeliveryOption" value="Standard" />
            </section>

            <!-- 🏠 Address -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-geo-alt-fill me-2 text-danger"></i>Delivery Address
                </h5>
                <textarea id="deliveryAddress" class="form-control p-3 rounded-4 shadow-sm"
                          placeholder="Enter your complete delivery address..." rows="3" required></textarea>
            </section>

            <!-- 💳 Payment Options -->
            <section class="mb-5">
                <h5 class="fw-bold mb-3 border-bottom pb-2 text-dark">
                    <i class="bi bi-credit-card-fill me-2 text-primary"></i>Payment Method
                </h5>

                <div class="row g-4 text-center">
                    <div class="col-md-4">
                        <div class="option-card active" data-value="Card">
                            <img src="/images/card.png" class="img-fluid mb-2" style="height: 40px;">
                            <h6 class="fw-bold">Card</h6>
                            <small class="text-muted">Visa / MasterCard</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card" data-value="Wallet">
                            <img src="/images/esewa.png" class="img-fluid mb-2" style="height: 40px;">
                            <h6 class="fw-bold">Digital Wallet</h6>
                            <small class="text-muted">eSewa / Khalti</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="option-card" data-value="Cash">
                            <img src="/images/cash.png" class="img-fluid mb-2" style="height: 40px;">
                            <h6 class="fw-bold">Cash on Delivery</h6>
                            <small class="text-muted">Pay when delivered</small>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="selectedPaymentOption" value="Card" />
            </section>

            <!-- ✅ Confirm -->
            <div class="d-grid gap-3 mt-4">
                <button id="confirmOrderBtn" class="btn btn-lg btn-gradient rounded-pill fw-bold py-3">
                    Confirm & Pay <i class="bi bi-arrow-right-circle ms-2"></i>
                </button>
                <a asp-controller="MenuItems" asp-action="Menu"
                   class="btn btn-outline-secondary btn-lg rounded-pill fw-semibold">
                    <i class="bi bi-arrow-left-circle me-2"></i>Back to Menu
                </a>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center py-3 small text-muted bg-light">
            🔒 Secure Checkout • Powered by <strong>FoodSathi ©2025</strong>
        </div>
    </div>
</div>

<!-- 🌈 Styles -->
<style>
    .glass-container {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .header-gradient {
        background: linear-gradient(135deg, #198754, #0d6efd);
    }

    .option-card {
        border: 2px solid #e0e0e0;
        border-radius: 20px;
        background: #fff;
        padding: 20px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .option-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 18px rgba(0, 0, 0, 0.08);
            border-color: #198754;
        }

        .option-card.active {
            border-color: #198754;
            background: #f6fff8;
            box-shadow: 0 5px 20px rgba(25, 135, 84, 0.1);
        }

    .btn-gradient {
        background: linear-gradient(90deg, #198754, #0d6efd);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #157347, #0b5ed7);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.2);
        }

    textarea {
        border: 2px solid #dee2e6;
        transition: all 0.3s ease;
    }

        textarea:focus {
            border-color: #198754;
            box-shadow: 0 0 6px rgba(25, 135, 84, 0.25);
        }

    @@media (max-width: 768px) {
        .option-card

    {
        padding: 15px;
    }

    .checkout-wrapper {
        border-radius: 20px;
    }

    }
</style>
