@model FoodSathi.Models.Order

@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden glass-card">

                <!-- Header -->
                <div class="bg-gradient text-white text-center py-4">
                    <h2 class="fw-bold mb-1"><i class="bi bi-bag-check-fill me-2"></i> Secure Checkout</h2>
                    <p class="mb-0 opacity-75">Complete your order safely & easily 🛒</p>
                </div>

                <div class="card-body p-4 p-md-5">

                    <!-- 🧾 Order Summary -->
                    <section class="mb-5">
                        <h5 class="fw-bold text-dark mb-3 border-bottom pb-2">
                            <i class="bi bi-receipt-cutoff me-2 text-success"></i>Order Summary
                        </h5>

                        <div class="order-summary">
                            <div class="d-flex justify-content-between mb-2">
                                <span><strong>Item:</strong></span>
                                <span>@Model.ItemName</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><strong>Quantity:</strong></span>
                                <span>@Model.Quantity</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><strong>Subtotal:</strong></span>
                                <span class="text-danger">Rs. <span id="basePrice">@Model.TotalPrice</span></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><strong>Date:</strong></span>
                                <span>@Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</span>
                            </div>
                            <div class="d-flex justify-content-between mt-3 border-top pt-2">
                                <span><strong>Delivery Charge:</strong></span>
                                <span>Rs. <span id="deliveryCharge">0</span></span>
                            </div>
                            <div class="d-flex justify-content-between border-top pt-2">
                                <span class="fw-bold">Final Total:</span>
                                <span class="fw-bold text-success">Rs. <span id="finalTotal">@Model.TotalPrice</span></span>
                            </div>
                        </div>
                    </section>

                    <!-- 🚚 Delivery Option -->
                    <section class="mb-5">
                        <h5 class="fw-bold text-dark mb-3 border-bottom pb-2">
                            <i class="bi bi-truck me-2 text-success"></i>Choose Delivery Option
                        </h5>

                        <div class="row g-3 delivery-options">
                            <div class="col-12 col-md-4">
                                <div class="delivery-card active" data-value="Standard" data-charge="0">
                                    <i class="bi bi-truck fs-3 text-success"></i>
                                    <h6 class="fw-bold mt-2">Standard</h6>
                                    <small class="text-muted">45–60 mins</small>
                                    <div><span class="badge bg-success-subtle text-success">Free</span></div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="delivery-card" data-value="Express" data-charge="100">
                                    <i class="bi bi-lightning-charge-fill fs-3 text-danger"></i>
                                    <h6 class="fw-bold mt-2">Express</h6>
                                    <small class="text-muted">20–30 mins</small>
                                    <div><span class="badge bg-danger-subtle text-danger">Rs. 100</span></div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="delivery-card" data-value="Pickup" data-charge="0">
                                    <i class="bi bi-shop fs-3 text-primary"></i>
                                    <h6 class="fw-bold mt-2">Pickup</h6>
                                    <small class="text-muted">Collect from outlet</small>
                                    <div><span class="badge bg-primary-subtle text-primary">No Charge</span></div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="selectedDeliveryOption" name="DeliveryOption" value="Standard" />
                    </section>

                    <!-- 🏠 Delivery Address -->
                    <section class="mb-5">
                        <h5 class="fw-bold text-dark mb-3 border-bottom pb-2">
                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i>Delivery Address
                        </h5>
                        <textarea id="deliveryAddress" name="Address" class="form-control rounded-3 p-3" rows="3"
                                  placeholder="Enter your complete address..." required></textarea>
                    </section>

                    <!-- 💳 Payment Options -->
                    <section class="mb-5">
                        <h5 class="fw-bold text-dark mb-3 border-bottom pb-2">
                            <i class="bi bi-credit-card-2-front-fill me-2 text-primary"></i>Payment Method
                        </h5>

                        <div class="row g-3 text-center payment-options">
                            <div class="col-12 col-md-4">
                                <div class="payment-card active" data-value="Card">
                                    <i class="bi bi-credit-card-fill fs-3 text-primary"></i>
                                    <h6 class="fw-bold mt-2">Card</h6>
                                    <small class="text-muted">Visa / MasterCard</small>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="payment-card" data-value="Wallet">
                                    <i class="bi bi-wallet2 fs-3 text-success"></i>
                                    <h6 class="fw-bold mt-2">Digital Wallet</h6>
                                    <small class="text-muted">eSewa / Khalti</small>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="payment-card" data-value="Cash">
                                    <i class="bi bi-cash-coin fs-3 text-secondary"></i>
                                    <h6 class="fw-bold mt-2">Cash on Delivery</h6>
                                    <small class="text-muted">Pay on arrival</small>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="selectedPaymentOption" name="PaymentOption" value="Card" />
                    </section>

                    <!-- ✅ Action Buttons -->
                    <div class="d-grid gap-3">
                        <button id="confirmOrderBtn" type="button" class="btn btn-gradient btn-lg fw-bold rounded-pill shadow-hover">
                            Confirm & Pay <i class="bi bi-arrow-right-circle ms-1"></i>
                        </button>
                        <a asp-controller="MenuItems" asp-action="Menu"
                           class="btn btn-outline-secondary btn-lg fw-bold rounded-pill shadow-hover">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to Menu
                        </a>
                    </div>

                </div>

                <div class="card-footer text-center py-3 bg-light border-top">
                    <small class="text-muted">🔒 Secure Checkout • Powered by FoodSathi ©2025</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Styling -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.25);
    }

    .delivery-card, .payment-card {
        background-color: #fff;
        border: 2px solid #e9ecef;
        border-radius: 15px;
        padding: 1.3rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .delivery-card:hover, .payment-card:hover {
            transform: translateY(-4px);
            border-color: #198754;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        }

        .delivery-card.active, .payment-card.active {
            border-color: #198754;
            background-color: #f6fff9;
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.25);
        }

    .btn-gradient {
        background: linear-gradient(135deg, #198754, #0dcaf0);
        border: none;
        color: #fff;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    textarea:focus {
        box-shadow: 0 0 10px rgba(25, 135, 84, 0.3);
        outline: none;
    }

    .fade-in {
        animation: fadeInUp 0.7s ease both;
    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(20px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<!-- ✅ Script -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const deliveryCards = document.querySelectorAll('.delivery-card');
        const paymentCards = document.querySelectorAll('.payment-card');
        const basePriceEl = document.getElementById('basePrice');
        const finalTotalEl = document.getElementById('finalTotal');
        const deliveryChargeEl = document.getElementById('deliveryCharge');
        const selectedDeliveryEl = document.getElementById('selectedDeliveryOption');
        const selectedPaymentEl = document.getElementById('selectedPaymentOption');

        // Delivery Selection
        deliveryCards.forEach(card => {
            card.addEventListener('click', () => {
                deliveryCards.forEach(c => c.classList.remove('active'));
                card.classList.add('active');
                const charge = parseFloat(card.dataset.charge);
                const basePrice = parseFloat(basePriceEl.textContent);
                const total = basePrice + charge;
                deliveryChargeEl.textContent = charge.toFixed(2);
                finalTotalEl.textContent = total.toFixed(2);
                selectedDeliveryEl.value = card.dataset.value;
            });
        });

        // Payment Selection
        paymentCards.forEach(card => {
            card.addEventListener('click', () => {
                paymentCards.forEach(c => c.classList.remove('active'));
                card.classList.add('active');
                selectedPaymentEl.value = card.dataset.value;
            });
        });

        // Confirm Payment
        document.getElementById('confirmOrderBtn').addEventListener('click', () => {
            const orderId = '@Model.OrderID';
            const finalTotal = finalTotalEl.textContent;
            const method = selectedPaymentEl.value;

            if (method === "Card") {
                window.location.href = `/Payment/PayByCard/${orderId}?amount=${finalTotal}`;
            } else if (method === "Wallet") {
                window.location.href = `/Payment/PayByWallet/${orderId}?amount=${finalTotal}`;
            } else {
                window.location.href = `/Payment/CashOnDelivery/${orderId}`;
            }
        });
    });
</script>
