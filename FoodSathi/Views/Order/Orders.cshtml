@model IEnumerable<FoodSathi.Models.Order>

@{
    ViewData["Title"] = "My Orders - FoodSathi";
}

<div class="container py-5 fade-in">
    <!-- 🌟 Header -->
    <div class="text-center mb-5 position-relative">
        <div class="logo-circle mx-auto d-flex align-items-center justify-content-center shadow-glow mb-3">
            <i class="bi bi-basket2-fill fs-1 text-light"></i>
        </div>
        <h2 class="fw-bold text-gradient">📦 My Orders</h2>
        <p class="text-muted">Track your active and completed orders easily</p>
    </div>

    <!-- 🧭 Split Layout -->
    <div class="row g-4">
        <!-- LEFT: Processing / Unfinished Orders -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-warning bg-gradient text-dark fw-bold text-center rounded-top-4">
                    <i class="bi bi-hourglass-split me-1"></i> Processing / Unfinished Orders
                </div>
                <div class="card-body">
                    @{
                        var processingOrders = Model
                        .Where(o => o.DeliveryStatus != "Delivered" && o.DeliveryStatus != "Picked Up")
                        .ToList();
                    }

                    @if (processingOrders.Count == 0)
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-emoji-neutral fs-3"></i>
                            <p class="mt-2">No ongoing orders at the moment.</p>
                        </div>
                    }
                    else
                    {
                        foreach (var order in processingOrders)
                        {
                            <div class="border-start border-warning border-4 rounded-3 p-3 mb-3 bg-light shadow-sm position-relative">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="fw-bold mb-0">@order.ItemName</h6>
                                    <span class="badge bg-warning text-dark">@order.DeliveryStatus</span>
                                </div>

                                <p class="small text-muted mb-1"><i class="bi bi-box-seam"></i> Quantity: @order.Quantity</p>
                                <p class="small text-muted mb-1"><i class="bi bi-cash-coin"></i> Total: ₹@order.TotalPrice</p>
                                <p class="small text-muted mb-1"><i class="bi bi-house-door"></i> Address: @order.Address</p>
                                <p class="small text-muted mb-1"><i class="bi bi-truck"></i> Delivery: @order.DeliveryOption</p>
                                <p class="small text-muted mb-2"><i class="bi bi-credit-card-2-front"></i> Payment: @order.PaymentMethod</p>
                                <p class="small mb-2 text-secondary"><i class="bi bi-clock-history"></i> Placed on: @order.OrderDate.ToString("MMM dd, yyyy - hh:mm tt")</p>

                                <!-- 🚀 Track Button -->
                                <div class="text-end">
                                    <a href="@Url.Action("Track", "Order", new { id = order.OrderID })" class="btn btn-sm btn-outline-warning rounded-pill shadow-sm">
                                        <i class="bi bi-geo-alt"></i> Track
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT: Delivered / Finished Orders -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-success bg-gradient text-white fw-bold text-center rounded-top-4">
                    <i class="bi bi-check2-circle me-1"></i> Delivered / Finished Orders
                </div>
                <div class="card-body">
                    @{
                        var completedOrders = Model
                        .Where(o => o.DeliveryStatus == "Delivered" || o.DeliveryStatus == "Picked Up")
                        .ToList();
                    }

                    @if (completedOrders.Count == 0)
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-emoji-smile fs-3"></i>
                            <p class="mt-2">No completed orders yet.</p>
                        </div>
                    }
                    else
                    {
                        foreach (var order in completedOrders)
                        {
                            string badgeClass = "bg-success";
                            string icon = "bi-check-circle";

                            if (order.DeliveryStatus == "Picked Up")
                            {
                                badgeClass = "bg-info";
                                icon = "bi-box-arrow-in-down";
                            }
                            else if (order.DeliveryStatus == "Delivered")
                            {
                                badgeClass = "bg-success";
                                icon = "bi-check-circle";
                            }
                            else
                            {
                                badgeClass = "bg-danger";
                                icon = "bi-x-circle";
                            }

                            <div class="border-start border-success border-4 rounded-3 p-3 mb-3 bg-light shadow-sm">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="fw-bold mb-0">@order.ItemName</h6>
                                    <span class="badge @badgeClass">
                                        <i class="bi @icon"></i> @order.DeliveryStatus
                                    </span>
                                </div>

                                <p class="small text-muted mb-1"><i class="bi bi-box-seam"></i> Quantity: @order.Quantity</p>
                                <p class="small text-muted mb-1"><i class="bi bi-cash-coin"></i> Total: ₹@order.TotalPrice</p>
                                <p class="small text-muted mb-1"><i class="bi bi-house-door"></i> Address: @order.Address</p>
                                <p class="small text-muted mb-1"><i class="bi bi-truck"></i> Delivery: @order.DeliveryOption</p>
                                <p class="small text-muted mb-2"><i class="bi bi-credit-card-2-front"></i> Payment: @order.PaymentMethod</p>
                                <p class="small mb-0 text-secondary"><i class="bi bi-calendar-check"></i> Ordered on: @order.OrderDate.ToString("MMM dd, yyyy - hh:mm tt")</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ✨ CSS Animation & Styles -->
<style>
    .fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .logo-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #ff9800, #ffb74d);
    }

    .text-gradient {
        background: linear-gradient(90deg, #ff9800, #f44336);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .shadow-glow {
        box-shadow: 0 0 15px rgba(255, 193, 7, 0.6);
    }

    .btn-outline-warning:hover {
        color: white;
        background-color: #ffb300;
        border-color: #ffa000;
    }
</style>
