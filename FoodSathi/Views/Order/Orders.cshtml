@model IEnumerable<FoodSathi.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient">📦 @ViewData["Title"]</h1>
        <p class="text-muted fs-5">Track your recent purchases and view order details below.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-info-circle me-2"></i>No orders found.
            <a href="/" class="text-decoration-none fw-semibold">Browse menu</a>
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table align-middle table-hover mb-0">
                    <thead class="bg-dark text-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Item</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Date</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr class="hover-row">
                                <td><strong>@order.OrderID</strong></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3" style="width:40px; height:40px;">
                                            <i class="bi bi-bag-check fs-5 text-primary"></i>
                                        </div>
                                        <span class="fw-semibold">@order.ItemName</span>
                                    </div>
                                </td>
                                <td>@order.Quantity</td>
                                <td><span class="fw-bold text-success">Rs. @order.TotalPrice</span></td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@order.OrderID"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        <i class="bi bi-eye me-1"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .text-gradient {
        background: linear-gradient(45deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hover-row:hover {
        background-color: #f8f9fa;
        transform: scale(1.01);
        transition: 0.2s ease-in-out;
    }

    .card {
        border-radius: 20px;
    }
</style>
