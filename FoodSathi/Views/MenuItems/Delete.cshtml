@model FoodSathi.Models.MenuItem

@{
    ViewData["Title"] = "Delete Menu Item | FoodSathi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg glass-card rounded-5 overflow-hidden">

                <!-- 🌈 Header -->
                <div class="card-header text-center text-white py-4 header-gradient">
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion
                    </h2>
                    <p class="text-light mb-0">Are you sure you want to delete this item?</p>
                </div>

                <!-- 🧾 Item Details -->
                <div class="card-body p-5 bg-light">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Url.Content(Model.ImagePath)" alt="Item Image"
                                 class="img-thumbnail shadow-sm rounded-4"
                                 style="max-width: 250px;" />
                        }
                        else
                        {
                            <img src="~/images/no-image.png" alt="No Image"
                                 class="img-thumbnail shadow-sm rounded-4"
                                 style="max-width: 250px;" />
                        }
                    </div>

                    <dl class="row text-dark">
                        <dt class="col-sm-4 fw-semibold">Item Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ItemName)</dd>

                        <dt class="col-sm-4 fw-semibold">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4 fw-semibold">Price</dt>
                        <dd class="col-sm-8">NPR @Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4 fw-semibold">Category</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>

                        <dt class="col-sm-4 fw-semibold">Available</dt>
                        <dd class="col-sm-8">
                            @(Model.IsAvailable ? "✅ Yes" : "❌ No")
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <!-- ⚠️ Confirmation Message -->
                    <div class="alert alert-danger text-center rounded-4 shadow-sm">
                        <i class="bi bi-exclamation-octagon-fill me-2"></i>
                        <strong>This action cannot be undone.</strong>
                    </div>

                    <!-- 🧭 Action Buttons -->
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="ItemID" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-gradient-danger btn-lg px-4 rounded-pill shadow">
                                <i class="bi bi-trash-fill me-2"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- 💅 Custom Styles -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .header-gradient {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        animation: gradientShift 6s infinite alternate;
    }

    @@keyframes gradientShift {
        0%

    {
        background-position: left;
    }

    100% {
        background-position: right;
    }

    }

    .btn-gradient-danger {
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
        color: #fff;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient-danger:hover {
            background: linear-gradient(90deg, #ff4b2b, #ff416c);
            transform: scale(1.05);
        }

    .form-control:focus, .form-select:focus {
        border-color: #ff416c;
        box-shadow: 0 0 0 0.2rem rgba(255, 65, 108, 0.25);
    }

    .text-gradient {
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
