@model IEnumerable<FoodSathi.Models.MenuItem>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "🍴 Our Menu | FoodSathi";
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var menuItems = Model ?? new List<FoodSathi.Models.MenuItem>();
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h2 class="fw-bold display-5 text-gradient mb-3">🍽️ Explore Our Delicious Menu</h2>
        <p class="text-muted fs-5">Taste the flavors crafted with love and care at <strong>FoodSathi</strong>.</p>
    </div>

    <!-- Search + Filter -->
    <div class="menu-controls d-flex flex-wrap justify-content-center align-items-center gap-3 mb-5">
        <input id="searchInput" type="text" class="form-control search-bar shadow-sm rounded-pill px-4 py-2 border-0 glass-input"
               placeholder="🔍 Search for your favorite dishes..." />

        <div class="btn-group flex-wrap" role="group">
            <button class="btn btn-filter active rounded-pill px-4 fw-semibold" onclick="filterMenu('all', event)">All</button>
            @foreach (var category in ViewBag.Categories as List<string>)
            {
                <button class="btn btn-filter rounded-pill px-4 fw-semibold" onclick="filterMenu('@category', event)">
                    @category
                </button>
            }
        </div>

    </div>

    <!-- Admin Add Button -->
    @if (User.IsInRole("Admin"))
    {
        <div class="text-center mb-4">
            <a asp-controller="MenuItems" asp-action="Create" class="btn btn-gradient px-4 py-2 rounded-pill shadow-sm fw-semibold me-2">
                ➕ Add New Menu Item
            </a>
            <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold">
                🏠 Back to Dashboard
            </a>
        </div>
    }

    <!-- Menu Grid -->
    <div class="row g-4" id="menuContainer">
        @if (!menuItems.Any())
        {
            <p class="text-center text-muted fs-5">No menu items available at the moment.</p>
        }
        else
        {
            @foreach (var item in menuItems)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 menu-item"
                     data-category="@item.Category?.Name?.ToLower()"
                     data-name="@item.ItemName?.ToLower()">
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden h-100 menu-card glass-card">
                        <div class="menu-img-wrapper position-relative">
                            <img src="@(!string.IsNullOrEmpty(item.ImagePath) ? Url.Content(item.ImagePath) : Url.Content("~/images/placeholder.png"))"
                                 alt="@item.ItemName" class="card-img-top rounded-top-4" />
                            <div class="menu-overlay">
                                <span class="badge bg-success bg-opacity-75 px-3 py-2 rounded-pill small">
                                    @item.Category?.Name
                                </span>
                            </div>
                        </div>

                        <div class="card-body text-center d-flex flex-column justify-content-between p-4">
                            <div>
                                <h5 class="fw-bold text-dark mb-1">@item.ItemName</h5>
                                <p class="text-muted small">@item.Description</p>
                            </div>

                            <div>
                                <p class="text-gradient fw-bold fs-5 mb-2">Rs. @item.Price</p>
                                <p class="small">@((item.IsAvailable) ? "✅ Available" : "❌ Out of Stock")</p>

                                @if (User.IsInRole("User"))
                                {
                                    <div class="input-group mb-3 justify-content-center" style="max-width:150px;margin:auto;">
                                        <button class="btn btn-outline-secondary btn-sm" type="button" onclick="decreaseQty(@item.ItemID)">−</button>
                                        <input type="text" id="qty-@item.ItemID" value="1" class="form-control text-center" readonly />
                                        <button class="btn btn-outline-secondary btn-sm" type="button" onclick="increaseQty(@item.ItemID)">+</button>
                                    </div>

                                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                            <input type="hidden" name="itemId" value="@item.ItemID" />
                                            <input type="hidden" id="form-qty-@item.ItemID" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-success btn-sm rounded-pill px-3 shadow-sm">🛒 Add to Cart</button>
                                        </form>

                                        <form asp-controller="Order" asp-action="BuyNow" method="post">
                                            <input type="hidden" name="itemId" value="@item.ItemID" />
                                            <input type="hidden" id="buy-qty-@item.ItemID" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">⚡ Buy Now</button>
                                        </form>
                                    </div>

                                    <a asp-controller="MenuItems" asp-action="Details" asp-route-id="@item.ItemID"
                                       class="btn btn-outline-info btn-sm rounded-pill mt-3 shadow-sm">ℹ️ Details</a>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <hr />
                                    <div class="d-flex justify-content-center flex-wrap gap-2">
                                        <a asp-controller="MenuItems" asp-action="Edit" asp-route-id="@item.ItemID" class="btn btn-warning btn-sm">✏️ Edit</a>
                                        <a asp-controller="MenuItems" asp-action="Details" asp-route-id="@item.ItemID" class="btn btn-info btn-sm">ℹ️ Details</a>
                                        <form asp-controller="MenuItems" asp-action="Delete" asp-route-id="@item.ItemID" method="post">
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this item?');">
                                                🗑️ Delete
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <a asp-area="Identity" asp-page="/Account/Login"
                                       class="btn btn-outline-primary btn-sm rounded-pill mt-3 shadow-sm">
                                        🔑 Login to Order
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        // Quantity handling
        function increaseQty(id) {
            const qty = document.getElementById("qty-" + id);
            const formQty = document.getElementById("form-qty-" + id);
            const buyQty = document.getElementById("buy-qty-" + id);
            let value = parseInt(qty.value) || 1;
            qty.value = value + 1;
            formQty.value = qty.value;
            if (buyQty) buyQty.value = qty.value;
        }

        function decreaseQty(id) {
            const qty = document.getElementById("qty-" + id);
            const formQty = document.getElementById("form-qty-" + id);
            const buyQty = document.getElementById("buy-qty-" + id);
            let value = parseInt(qty.value) || 1;
            if (value > 1) {
                qty.value = value - 1;
                formQty.value = qty.value;
                if (buyQty) buyQty.value = qty.value;
            }
        }

        // Search & filter
        const searchInput = document.getElementById('searchInput');
               function filterMenu(category, event) {
            if (event) {
                document.querySelectorAll('.btn-group .btn').forEach(btn => btn.classList.remove('active'));
                event.target.classList.add('active');
            }

            const query = document.getElementById('searchInput').value.toLowerCase();
            document.querySelectorAll('.menu-item').forEach(item => {
                const itemCategory = item.dataset.category?.toLowerCase();
                const itemName = item.dataset.name?.toLowerCase();
                const matchesCategory = (category.toLowerCase() === 'all' || itemCategory === category.toLowerCase());
                const matchesSearch = itemName.includes(query);
                item.style.display = (matchesCategory && matchesSearch) ? 'block' : 'none';
            });
        }


        searchInput.addEventListener('input', () => {
            const activeCategory = document.querySelector('.btn-group .btn.active')?.textContent.trim() || 'All';
            filterMenu(activeCategory === 'All' ? 'all' : activeCategory);
        });
    </script>

    <style>
        /* Gradient Title */
        .text-gradient {
            background: linear-gradient(45deg, #ff6b6b, #f06595, #845ef7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Glass Inputs */
        .glass-input {
            background: rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        /* Filter Buttons */
        .btn-filter {
            border: 1px solid #0d6efd;
            color: #0d6efd;
            background-color: white;
            transition: all 0.3s ease;
        }

            .btn-filter.active,
            .btn-filter:hover {
                background: linear-gradient(90deg, #0d6efd, #6610f2);
                color: white;
                border: none;
            }

        /* Menu Card */
        .menu-card {
            transition: all 0.35s ease;
            background: rgba(255, 255, 255, 0.9);
        }

            .menu-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            }

        /* Glass effect */
        .glass-card {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(12px);
        }

        .menu-img-wrapper {
            height: 180px;
            overflow: hidden;
            position: relative;
        }

            .menu-img-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

        .menu-card:hover img {
            transform: scale(1.08);
        }

        .menu-overlay {
            position: absolute;
            top: 10px;
            left: 10px;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #0d6efd, #6610f2);
            color: white;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(90deg, #6610f2, #0d6efd);
                transform: translateY(-2px);
            }

        @@media (max-width: 768px) {
            .menu-controls

        {
            flex-direction: column;
            align-items: stretch;
        }

        .search-bar {
            width: 100%;
        }

        }
    </style>
}
