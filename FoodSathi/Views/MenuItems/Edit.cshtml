@model FoodSathi.Models.MenuItem

@{
    ViewData["Title"] = "Edit Menu Item | FoodSathi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg glass-card rounded-5 overflow-hidden">

                <!-- 🌈 Header -->
                <div class="card-header text-center text-white py-4 header-gradient">
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-pencil-square me-2"></i> Edit Menu Item
                    </h2>
                    <p class="text-light mb-0">Update details and save changes to your menu</p>
                </div>

                <!-- ✏️ Form Body -->
                <div class="card-body p-5 bg-light">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ItemID" />
                        <input type="hidden" asp-for="ImagePath" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-4 shadow-sm"></div>

                        <!-- 🍔 Item Name -->
                        <div class="mb-4">
                            <label asp-for="ItemName" class="form-label fw-semibold">Item Name</label>
                            <input asp-for="ItemName" class="form-control shadow-sm rounded-pill py-2 px-3" placeholder="Enter item name" />
                            <span asp-validation-for="ItemName" class="text-danger small"></span>
                        </div>

                        <!-- 📜 Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" rows="3" class="form-control shadow-sm rounded-4 p-3" placeholder="Enter item description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- 💰 Price -->
                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-semibold">Price (Rs.)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control shadow-sm rounded-pill py-2 px-3" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <!-- 🖼️ Current Image -->
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-4 text-center">
                                <label class="fw-semibold mb-2 text-secondary">Current Image</label>
                                <div>
                                    <img src="@Model.ImagePath" alt="Current Image" class="img-thumbnail rounded-4 shadow-sm" style="max-width: 250px;" />
                                </div>
                            </div>
                        }

                        <!-- 📷 Upload New Image -->
                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-semibold">Upload New Image</label>
                            <input asp-for="ImageFile" type="file" accept="image/*" class="form-control shadow-sm rounded-pill py-2" onchange="previewImage(event)" />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                            <small class="form-text text-muted">Leave empty to keep current image</small>
                        </div>

                        <div class="mb-4 text-center">
                            <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail rounded-4 shadow-sm" style="max-width: 250px; display: none;" />
                        </div>

                        <!-- 🍱 Category -->
                        <div class="mb-4">
                            <label asp-for="CategoryID" class="form-label fw-semibold">Category</label>
                            <select asp-for="CategoryID" class="form-select shadow-sm rounded-pill py-2 px-3"
                                    asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger small"></span>
                        </div>



                        <!-- ✅ Availability -->
                        <div class="form-check form-switch mb-4">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" role="switch" id="isAvailableSwitch" />
                            <label class="form-check-label fw-semibold" for="isAvailableSwitch">
                                Available for Customers
                            </label>
                        </div>

                        <!-- 🧭 Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-gradient px-4 py-2 rounded-pill shadow-sm">
                                <i class="bi bi-save-fill me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- 💅 Styles -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .header-gradient {
        background: linear-gradient(135deg, #20c997, #198754);
        animation: gradientShift 6s infinite alternate;
    }

    @@keyframes gradientShift {
        0%

    {
        background-position: left;
    }

    100% {
        background-position: right;
    }

    }

    .btn-gradient {
        background: linear-gradient(90deg, #20c997, #198754);
        color: #fff;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #198754, #20c997);
        }

    input:focus, textarea:focus, select:focus {
        border-color: #20c997 !important;
        box-shadow: 0 0 0 0.2rem rgba(32, 201, 151, 0.25) !important;
        outline: none !important;
    }

    .form-check-input:checked {
        background-color: #20c997;
        border-color: #198754;
    }
</style>

<!-- 🧠 Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(event) {
            const preview = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
}
