@model FoodSathi.Models.MenuItem

@{
    ViewData["Title"] = "Create Menu Item | FoodSathi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg glass-card rounded-5 overflow-hidden">

                <!-- 🌈 Premium Header -->
                <div class="card-header text-center text-white py-4 header-gradient">
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-plus-circle-dotted me-2"></i> Create New Menu Item
                    </h2>
                    <p class="text-light mb-0">Add delicious items to your menu with style 🍽️</p>
                </div>

                <!-- 🧾 Form Body -->
                <div class="card-body p-5 bg-light">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm"></div>

                        <!-- Item Name -->
                        <div class="mb-4">
                            <label asp-for="ItemName" class="form-label fw-semibold text-dark">Item Name</label>
                            <input asp-for="ItemName" class="form-control form-control-lg shadow-sm" placeholder="e.g., Chicken Momo" />
                            <span asp-validation-for="ItemName" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold text-dark">Description</label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="3" placeholder="Write a short description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-4">
                            <label asp-for="Price" class="form-label fw-semibold text-dark">Price (NPR)</label>
                            <input asp-for="Price" class="form-control shadow-sm" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-4">
                            <label asp-for="CategoryID" class="form-label fw-semibold text-dark">Category</label>
                            <select asp-for="CategoryID" class="form-select shadow-sm"
                                    asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger small"></span>
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label fw-semibold text-dark">Upload Image</label>
                            <input asp-for="ImageFile" class="form-control shadow-sm" type="file" accept="image/*" onchange="previewImage(event)" />
                            <small class="form-text text-muted">Accepted: JPG, PNG, GIF (Max 5MB)</small>
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>

                        <!-- Image Preview -->
                        <div class="text-center mb-4">
                            <img id="imagePreview" src="#" alt="Image Preview"
                                 class="img-thumbnail shadow-sm rounded-4"
                                 style="max-width: 250px; display: none;" />
                        </div>

                        <!-- Availability -->
                        <div class="form-check mb-4">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" id="availableCheck" />
                            <label asp-for="IsAvailable" class="form-check-label fw-semibold text-dark">Available for customers</label>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                                <i class="bi bi-arrow-left-circle me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-gradient btn-lg px-4 rounded-pill shadow">
                                <i class="bi bi-cloud-upload me-2"></i> Create Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Scripts -->
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function previewImage(event) {
            const preview = document.getElementById('imagePreview');
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
}

<!-- 💅 Custom Styles -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .header-gradient {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        animation: gradientMove 5s infinite alternate;
    }

    @@keyframes gradientMove {
        0% {
            background-position: left;
        }

        100% {
            background-position: right;
        }
    }

    .btn-gradient {
        background: linear-gradient(90deg, #ff7e5f, #feb47b);
        color: #fff;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #feb47b, #ff7e5f);
            transform: scale(1.05);
        }

    .form-control:focus, .form-select:focus {
        border-color: #ff7e5f;
        box-shadow: 0 0 0 0.2rem rgba(255, 126, 95, 0.25);
    }

    .text-gradient {
        background: linear-gradient(90deg, #ff7e5f, #feb47b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
