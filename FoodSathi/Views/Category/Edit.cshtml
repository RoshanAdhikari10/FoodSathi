@model FoodSathi.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-5 fade-in">
    <h2 class="text-gradient mb-4">✏️ Edit Category</h2>
    <div class="glass-card p-4 rounded-4 shadow-lg text-white">
        <form asp-action="Edit">
            <input type="hidden" asp-for="CategoryID" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter new name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning rounded-pill px-4">Update</button>
            <a href="/Category" class="btn btn-outline-light rounded-pill px-4">Cancel</a>
        </form>
    </div>
</div>
