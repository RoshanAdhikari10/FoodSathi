@model IEnumerable<FoodSathi.Models.Category>
@{
    ViewData["Title"] = "Manage Categories | FoodSathi";
}

<div class="container py-5 fade-in">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-gradient">🏷️ Manage Categories</h1>
        <a href="/Category/Create" class="btn btn-primary rounded-pill px-4">
            <i class="bi bi-plus-circle"></i> Add Category
        </a>
    </div>

    <div class="table-responsive glass-card p-4 rounded-4 shadow-lg">
        <table class="table table-hover align-middle mb-0 text-white">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryID</td>
                        <td>@category.Name</td>
                        <td class="text-center">
                            <a href="/Category/Edit/@category.CategoryID" class="btn btn-warning btn-sm rounded-pill me-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="/Category/Delete/@category.CategoryID" class="btn btn-danger btn-sm rounded-pill">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center py-4 opacity-75">
                <i class="bi bi-inboxes fs-1 d-block mb-2"></i>
                <p>No categories found.</p>
            </div>
        }
    </div>
</div>
