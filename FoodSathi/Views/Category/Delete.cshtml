@model FoodSathi.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5 fade-in">
    <div class="glass-card p-5 rounded-4 shadow-lg text-white text-center">
        <i class="bi bi-exclamation-triangle text-danger fs-1 mb-3"></i>
        <h3 class="mb-3">Are you sure you want to delete this category?</h3>

        <h4 class="text-warning mb-4">“@Model.Name”</h4>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CategoryID" />
            <button type="submit" class="btn btn-danger rounded-pill px-4 me-2">Yes, Delete</button>
            <a href="/Category" class="btn btn-outline-light rounded-pill px-4">Cancel</a>
        </form>
    </div>
</div>
