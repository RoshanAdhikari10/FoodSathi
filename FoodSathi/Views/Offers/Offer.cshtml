@model IEnumerable<Offer>

@{
    ViewData["Title"] = "Special Offers";
}

<div class="offer-section py-5">
    <div class="container">
        <!-- Title -->
        <div class="text-center mb-5">
            <h2 class="fw-bold display-6 text-gradient">
                🎉 Exclusive <span class="text-success">FoodSathi Offers</span>
            </h2>
            <p class="text-muted">Grab your favorite deals before they’re gone!</p>
        </div>

        <!-- Add New Offer Button -->
        <div class="text-end mb-4">
            <a asp-action="Create" class="btn btn-add shadow-sm">
                ➕ Add New Offer
            </a>
        </div>

        <!-- Offer Cards Grid -->
        <div class="row g-4">
            @foreach (var offer in Model)
            {
                var isActive = offer.StartDate <= DateTime.Now && offer.EndDate >= DateTime.Now;
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card offer-card border-0 rounded-4 shadow-lg overflow-hidden h-100">

                        <!-- Offer Image with badge -->
                        <div class="position-relative">
                            <img src="@offer.ImageUrl" alt="@offer.Title" class="offer-img" />

                            <span class="badge position-absolute top-0 start-0 m-3 px-3 py-2 fs-6 rounded-pill
                                             @(isActive ? "bg-success" : "bg-secondary") shadow">
                                @(isActive ? "Active ✅" : "Expired ❌")
                            </span>
                        </div>

                        <!-- Offer Body -->
                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="fw-bold text-dark">@offer.Title</h5>
                            <p class="text-muted small mb-2">@offer.Description</p>

                            @if (offer.Discount > 0)
                            {
                                <p class="fw-semibold text-success mb-1">
                                    💰 <span class="text-dark">Discount:</span> @offer.Discount %
                                </p>
                            }

                            <p class="text-muted small mb-3">
                                📅 Valid: @offer.StartDate.ToString("MMM dd, yyyy") - @offer.EndDate.ToString("MMM dd, yyyy")
                            </p>

                            <!-- Buttons -->
                            <div class="mt-auto">
                                @if (isActive)
                                {
                                    <a asp-controller="Order" asp-action="Checkout"
                                       asp-route-offerTitle="@offer.Title.Replace(" ", "-")"
                                       class="btn btn-buy w-100 fw-semibold mb-3">
                                        🛒 Buy Now
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100 fw-semibold mb-3" disabled>
                                        ❌ Expired
                                    </button>
                                }

                                <div class="d-flex justify-content-between">
                                    <a asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-warning btn-sm rounded-pill fw-semibold">✏️ Edit</a>
                                    <a asp-action="Details" asp-route-id="@offer.Id" class="btn btn-info btn-sm rounded-pill fw-semibold text-white">ℹ️ Details</a>
                                    <form asp-action="Delete" asp-route-id="@offer.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm rounded-pill fw-semibold"
                                                onclick="return confirm('Are you sure you want to delete this offer?');">
                                            🗑️ Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Background and header */
        .offer-section {
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
        }

        .text-gradient {
            background: linear-gradient(90deg, #198754, #ff7f50);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Add New Offer Button */
        .btn-add {
            background: linear-gradient(90deg, #0d6efd, #20c997);
            color: #fff;
            border: none;
            border-radius: 30px;
            font-weight: 600;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

            .btn-add:hover {
                opacity: 0.9;
                transform: scale(1.05);
            }

        /* Card Styling */
        .offer-card {
            transition: all 0.4s ease;
            background: #fff;
        }

            .offer-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
            }

        .offer-img {
            height: 220px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .offer-card:hover .offer-img {
            transform: scale(1.07);
        }

        /* Buy Button */
        .btn-buy {
            background: linear-gradient(90deg, #198754, #20c997);
            color: white;
            border: none;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

            .btn-buy:hover {
                transform: scale(1.04);
                background: linear-gradient(90deg, #157347, #1e9e7a);
            }

        /* Responsive */
        @@media (max-width: 768px) {
            h2

        {
            font-size: 1.6rem;
        }

        .offer-img {
            height: 180px;
        }

        .btn-buy {
            font-size: 0.95rem;
        }

        }
    </style>
}

@section Scripts {
    <script>
        console.log("🔥 Enhanced responsive and professional Special Offers page loaded successfully.");
    </script>
}
