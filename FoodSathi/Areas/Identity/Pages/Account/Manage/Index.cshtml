@page
@model IndexModel
@{
    ViewData["Title"] = "My Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-4">
    <h2 class="text-center text-primary fw-bold mb-4">
        👤 @ViewData["Title"]
    </h2>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h4 class="text-center text-secondary mb-4">Update Your Information</h4>

                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fw-semibold">Username</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Optional Extra Fields -->
                        <div class="mb-3">
                            <label for="Address" class="form-label fw-semibold">Address</label>
                            <input type="text" id="Address" name="Address" class="form-control" placeholder="Enter your address" />
                        </div>

                        <div class="mb-3">
                            <label for="ProfilePicture" class="form-label fw-semibold">Profile Picture</label>
                            <input type="file" id="ProfilePicture" name="ProfilePicture" class="form-control" />
                        </div>

                        <!-- Save Button -->
                        <button id="update-profile-button" type="submit" class="btn btn-primary w-100 rounded-pill fw-semibold shadow-sm">
                            💾 Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
