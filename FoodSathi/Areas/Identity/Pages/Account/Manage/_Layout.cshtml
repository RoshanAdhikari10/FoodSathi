@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<section class="py-5" style="background: #f8f9fa;">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">👤 Manage Your Foodsathi Account</h2>
            <p class="text-muted">
                Update your profile details, change password, manage personal data, and control your account settings.
            </p>
        </div>

        <div class="row">
            <!-- Sidebar Navigation -->
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card shadow-sm border-0 rounded-4 sticky-top" style="top: 20px;">
                    <div class="card-body p-3">
                        <h6 class="text-secondary mb-3 fw-bold">Account Settings</h6>
                        <partial name="_ManageNav" />
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9 col-md-8">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Sidebar link hover effect */
    .sidebar-link:hover {
        background-color: #e9f5ff;
        border-radius: 0.5rem;
        transition: background-color 0.3s;
    }

    /* Card shadow on hover */
    .card:hover {
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s;
    }

    /* Responsive adjustments */
    @@media (max-width: 767.98px) {
        .sticky-top

    {
        position: relative !important;
        top: auto !important;
    }

    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
