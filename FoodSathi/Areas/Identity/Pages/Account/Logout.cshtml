@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out - FoodSathi";
}

<div class="logout-container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-5 text-center logout-box">

        <h1 class="fw-bold text-danger mb-3">
            <i class="bi bi-box-arrow-right"></i> Log Out
        </h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p class="lead mb-4 text-muted">
                Are you sure you want to log out of your FoodSathi account?
            </p>

            <form asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  method="post">
                <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4 shadow-sm">
                    <i class="bi bi-power"></i> Confirm Logout
                </button>
            </form>
        }
        else
        {
            <div class="text-success">
                <i class="bi bi-check-circle-fill fs-1 mb-3"></i>
                <h3>You have successfully logged out!</h3>
                <p class="text-muted mt-2">See you again soon at FoodSathi 🍽️</p>
                <a asp-page="/Account/Login" class="btn btn-warning mt-3 rounded-pill px-4 shadow-sm">
                    <i class="bi bi-box-arrow-in-right"></i> Log In Again
                </a>
            </div>
        }
    </div>
</div>

<style>
    .logout-container {
        background: linear-gradient(135deg, #fff5e6, #ffe8cc);
    }

    .logout-box {
        background: #fff;
        max-width: 500px;
        animation: fadeIn 0.7s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.03);
        transition: 0.3s;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        transform: scale(1.03);
        transition: 0.3s;
    }

    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .logout-box

    {
        padding: 2rem;
    }

    h1 {
        font-size: 1.75rem;
    }

    .btn {
        font-size: 0.95rem;
        padding: 0.6rem 1.3rem;
    }

    }
</style>
